@using SECOM_AJIS.DataEntity.Common;
@using SECOM_AJIS.Common.Helpers;
@using SECOM_AJIS.Presentation.Common.Helpers;
@using SECOM_AJIS.Presentation.Master.Helpers;
@using SECOM_AJIS.Presentation.Income.Helpers;
@using SECOM_AJIS.Presentation.Income.Controllers;
@using SECOM_AJIS.Common.Util.ConstantValue;
@section page_header{
    <script type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/dhtmlxcalendar.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/excells/dhtmlxgrid_excell_dhxcalendar.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/excells/dhtmlxgrid_excell_ron2.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/Base/DateTimePicker.js")" ></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/Income/ICS130.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/number-functions.js")"></script>
}
@{
    ViewBag.Col1 = "200px;";
    ViewBag.Col2 = "170px;";
    ViewBag.Col3 = "100px;";
    ViewBag.Col4 = "250px;";

    ViewBag.Col2Txt = "140px;";
    ViewBag.Col4Txt = "140px;";
}
<div class="main-table" id="divSearchWHT">
    <div class="table-header">
        @Resources.ICS130.lblHeader
    </div>
    <form name="formSearch" id="formSearchWHT" action="#">
    <div id="divSearchWHTHeader">
        <div class="usr-row" style="margin-top: 5px">
            <div class="usr-label" style="width:@ViewBag.Col1">
                @Resources.ICS130.lblReportType
            </div>
            <div class="usr-object">
                @Html.CommonRadioButton("rdoAccount", @Resources.ICS130.lblAccount, "2", false, "ReportType")
                @Html.CommonRadioButton("rdoIMS", @Resources.ICS130.lblIMS, "1", false, "ReportType")
            </div>
        </div>
        <div class="usr-clear-style">
            &nbsp;
        </div>
        <div class="usr-row">
            <div class="usr-label" style="width:@ViewBag.Col1">
                @Resources.ICS130.lblPeriod
            </div>
            <div class="usr-object">
                @Html.WHTMonthYearComboBox("cboPeriodFrom", new { style = "width:150px;" })
                <span id="PeriodTo" style="display: none">
                 - 
                @Html.WHTMonthYearComboBox("cboPeriodTo", new { style = "width:150px;" })
                </span>
            </div>
        </div>
        <div class="usr-clear-style">
            &nbsp;
        </div>
        <div class="usr-row" style="margin-top: 5px">
            <div class="usr-object" style="float: right; margin-right: 4px;">
                @Html.CommonButton("btnSearch", @Resources.ICS130.lblBtnSearch, new { type = "button" })
                @Html.CommonButton("btnClear", @Resources.ICS130.lblBtnClear, new { type = "button" })
            </div>
        </div>
        <div class="usr-clear-style">
            &nbsp;
        </div>
    </div>
    </form>
</div>

<div id="divSearchResult" class="main-table" style="margin-top: 5px;">
    <div class="table-header">@Resources.ICS130.lblHeaderSearchResult</div>
    <div id="divGridAccount" style="width: 99%; margin-left: 4px; margin-top: 5px;">
    </div>
    <div id="divGridIMS" style="width: 99%; margin-left: 4px; margin-top: 5px;">
    </div>
    <div class="usr-clear-style">
        &nbsp;</div>
    <div class="usr-row" style="margin-top: 5px">
        <div style="text-align: right; float: right; margin-right: 4px;">
            @Html.CommonButton("btnDownload", @Resources.ICS130.lblBtnDownload, new { type = "button" })
            <iframe id="ifDownload" name="Download" style="visibility: hidden; width: 0px; height: 0px;"></iframe>
        </div>
    </div>
    <div class="usr-clear-style">
        &nbsp;</div>
</div>
