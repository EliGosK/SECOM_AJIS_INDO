    <form id="form1" action="#">
    <!-- Form 1 -->

        <!-- Input Data -->
        <div class="main-table" id="divInputData">
            <div class="table-header">
                <!-- in design screen have no header ? -->
                <!--//Resources.ICS101.lblTableHeader1-->
            </div>

            <div id="divInputDataBody">
                <div class="usr-row">
                    <div class="usr-label" style="width:@ViewBag.lbWidth;">
                        @Resources.ICS101.lblHeaderExpectedCollectDate
                    </div>
                    <div class="usr-object">
                        @Html.CommonTextBox("dtpExpectedCollectDateFrom", "", new { style = "width:100px;" })  
                        <span> ~ </span>
                        @Html.CommonTextBox("dtpExpectedCollectDateTo", "", new { style = "width:100px;" })  
                    </div>
                    <div class="usr-object">
                        <!-- (ddMMyyyy)-->
                        @Html.LabelDateFormat("lblAdjustBillingPeriodTo")
                    </div>
                </div>
                <div class="usr-row">
                    <div class="usr-label" style="width:@ViewBag.lbWidth;">
                        @Resources.ICS100.lblCollectionArea
                    </div>
                    <div class="usr-object" style="width:@ViewBag.SubTableWidth;">
                        <div class="label-view">@Html.CollectionAreaCheckList("chklCollectionArea", null, new { width = "350px", height = "120px" })</div>
                    </div>
                </div>
                <div class="usr-row">
                    <div class="usr-object" style="float: right; padding-top:20px;">
                        @Html.CommonButton("btnSearch", (string)@Resources.ICS101.btnSearch, new { style = "width:100px;", type = "Button" })
                        @Html.CommonButton("btnClear", (string)@Resources.ICS101.btnClear, new { style = "width:100px;", type = "Button" })
                    </div>
                </div>
            </div>

            <div class="usr-clear-style" style="height:0px">&nbsp;</div>
        </div>

        <!-- By Billing Detail -->
        <div class="main-table" id="divResaultList">
            <div class="table-header">
                
            </div>

            <div class="usr-row">
                <div id="ICS101_MoneyCollectionManagementInformationGrid" style="width: 99% ; margin-left: 4px;"></div>
            </div>
            <div class="usr-row">
            </div>
            <div class="usr-row">
                <div align="center">
                    @Html.CommonButton("btnDownloadFile", (string)@Resources.ICS101.btnDownloadFile, new { style = "width:100px;", type = "Button" })
                </div>
                
            </div>
            <iframe id="ifDownload" style="visibility: hidden; width: 0px; height: 0px;"></iframe>
            <div class="usr-clear-style" style="height:0px">&nbsp;</div>
        </div>

    <!-- End Form 1 -->
    </form>