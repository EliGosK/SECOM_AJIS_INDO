
@using SECOM_AJIS.DataEntity.Income;
@using SECOM_AJIS.Common.Helpers;
@using SECOM_AJIS.Presentation.Income.Helpers;
@using SECOM_AJIS.Common.Util.ConstantValue;
@using SECOM_AJIS.Presentation.Common.Helpers;

@{
    Layout = "~/Views/Shared/_DialogLayout.cshtml";
    
    ViewBag.LabelCol1Width = "230px";
    ViewBag.LabelCol2Width = "130px";
    ViewBag.LabelCol3Width = "100px";
    ViewBag.ObjectCol1Width = "130px";
    ViewBag.ObjectCol2Width = "150px";
    ViewBag.ObjectCol3Width = "220px";
    ViewBag.ObjectCol4Width = "550px";
    ViewBag.ObjectColMergeWidth = "720px";

    ViewBag.SubTableWidth = "550px";
    ViewBag.SubLabelCol1Width = "120px";

    ViewBag.lbWidth = "220px";  /* ViewBag.LabelWidth */
    ViewBag.lbWidth2 = "234px";
    ViewBag.ObjectCol1Div = "140px";
    ViewBag.Div1Width = "160px";
    
    ViewBag.txtBackgroundColor = "None"; /*Lime*/
    ViewBag.isViewMode = true;

}
@section page_header{
    <script src="../../Scripts/Base/DateTimePicker.js" type="text/javascript"></script>
    <script src="../../Scripts/Base/ComboBox.js" type="text/javascript"></script>
    <script src="../../Scripts/Base/AutoComplete.js" type="text/javascript"></script>
    <script src="../../Scripts/Base/ComboBox.js" type="text/javascript"></script>
    <script src="../../Scripts/Common/Dialog.js" type="text/javascript"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/ext/dhtmlxgrid_nxml.js")" ></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/dhtmlxcommon.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/dhtmlxgrid.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/dhtmlxgridcell.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/ext/dhtmlxgrid_data.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/ext/dhtmlxgrid_pgn.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/excells/dhtmlxgrid_excell_dhxcalendar.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/dhtmlxcalendar.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/number-functions.js")"></script>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/js/dhtmlxgrid/dhtmlxgrid.css")"/>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/js/dhtmlxgrid/skins/dhtmlxgrid_dhx_secom.css")"/>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/js/dhtmlxgrid/ext/dhtmlxgrid_pgn_bricks.css")"/>

    <script type="text/javascript" src="@Url.Content("~/Scripts/Income/ICS033.js")"></script>
    <script type="text/javascript">
        objICS033 = {
            BillingOfficeCode: "@ViewBag.BillingOfficeCode",
            BillingOfficeName: "@ViewBag.BillingOfficeName",
            BillingClientNameEN: "@ViewBag.BillingClientNameEN",
            BillingClientNameLC: "@ViewBag.BillingClientNameLC",
            BillingClientAddressEN: "@ViewBag.BillingClientAddressEN",
            BillingClientAddressLC: "@ViewBag.BillingClientAddressLC",
            BillingClientTelNo: "@ViewBag.BillingClientTelNo",
            ContactPersonName: "@ViewBag.ContactPersonName",
            UnpaidAmountString: "@ViewBag.UnpaidAmountString",
            unpaidAmountUsString: "@ViewBag.unpaidAmountUsString",

            Mode: "@ViewBag.Mode",

            BillingTargetCode: "@ViewBag.BillingTargetCode",
            InvoiceNo: "@ViewBag.InvoiceNo",
            InvoiceOCC: "@ViewBag.InvoiceOCC",
            BillingCode: "@ViewBag.BillingCode"
        };
    </script>
}
<style>
    .ics033AmountTable {
        width: 250px;
        border-spacing: 0;
        border-collapse: separate;
        border: 0.5px solid #ccc;
    }
    .ics033AmountTable td { border: 0.5px solid #ccc; }
    .ics033AmountTable tbody { margin: 0; padding: 0; }
</style>

<div style="display:none;">
    @Html.Hidden("ics033btnClose", (string)@Resources.ICS033.btnClose)
</div>

    <form id="BillingDetail" action="#">
    <!-- Form 1 -->

        <!-- Input Data -->
        <div class="main-table" id="divInputData">
            <div class="table-header">
                <!--//Resources.ICS033.lblTableHeader1-->
            </div>

            <div id="divViewUnpaidBillingDetailList">
                <div class="usr-row">
                    <div class="usr-label" style="width:@ViewBag.LabelCol1Width;">
                        @Resources.ICS033.lblBillingTragetCode
                    </div>
                    <div class="usr-object" style="width:@ViewBag.ObjectCol1Width; background-color:@ViewBag.txtBackgroundColor;">
                        @Html.CommonTextBox("txtBillingTragetCode", null, new { style = "width:150px;", isViewMode = @ViewBag.isViewMode })
                    </div>
                    <div class="usr-label" style="width:@ViewBag.LabelCol2Width;">
                        @Resources.ICS033.lblBillingOffice
                    </div>
                    <div class="usr-object" style="width:@ViewBag.ObjectCol2Width; background-color:@ViewBag.txtBackgroundColor;">
                        @Html.CommonTextBox("txtBillingOfficeName", null, new { style = "width:150px;", isViewMode = @ViewBag.isViewMode })
                    </div>
                    <div class="usr-label" style="width:150px;">
                         @Resources.ICS033.lblBillingOfficeCode
                    </div>
                    <div class="usr-object" style="width:40px; background-color:@ViewBag.txtBackgroundColor;">
                         @Html.CommonTextBox("txtBillingOfficeCode", null, new { style = "width:30px;", isViewMode = @ViewBag.isViewMode })
                    </div>
                </div>
                <div class="usr-row">
                    <div class="usr-label" style="width:@ViewBag.LabelCol1Width;">
                        @Resources.ICS033.lblBillingClientNameEN
                    </div>
                    <div class="usr-object" style="width:@ViewBag.SubTableWidth; background-color:@ViewBag.txtBackgroundColor;">
                        @Html.CommonTextBox("txtBillingClientNameEN", null, new { style = "width:350px;", isViewMode = @ViewBag.isViewMode })
                    </div>
                </div>
                <div class="usr-row">
                    <div class="usr-label" style="width:@ViewBag.LabelCol1Width;">
                         @Resources.ICS033.lblBillingClientNameLC
                    </div>
                    <div class="usr-object" style="width:@ViewBag.SubTableWidth; background-color:@ViewBag.txtBackgroundColor;">
                         @Html.CommonTextBox("txtBillingClientNameLC", null, new { style = "width:350px;", isViewMode = @ViewBag.isViewMode })
                    </div>
                </div>
                <div class="usr-row">
                    <div class="usr-label" style="width:@ViewBag.LabelCol1Width;">
                        @Resources.ICS033.lblBillingClientAddressEN
                    </div>
                    <div class="usr-object" style="width:@ViewBag.SubTableWidth; background-color:@ViewBag.txtBackgroundColor;">
                         @Html.CommonTextBox("txtBillingClientAddressEN", null, new { style = "width:550px;", isViewMode = @ViewBag.isViewMode })
                    </div>
                </div>
                <div class="usr-row">
                    <div class="usr-label" style="width:@ViewBag.LabelCol1Width;">
                        @Resources.ICS033.lblBillingClientAddressLC
                    </div>
                    <div class="usr-object" style="width:@ViewBag.SubTableWidth; background-color:@ViewBag.txtBackgroundColor;">
                         @Html.CommonTextBox("txtBillingClientAddressLC", null, new { style = "width:550px;", isViewMode = @ViewBag.isViewMode })
                    </div>
                </div>

                <div class="usr-row">
                    <div class="usr-label" style="width:@ViewBag.LabelCol1Width;">
                        @Resources.ICS033.lblBillingClientTelNo
                    </div>
                    <div class="usr-object" style="width:@ViewBag.ObjectCol1Width; background-color:@ViewBag.txtBackgroundColor;">
                        @Html.CommonTextBox("txtBillingClientTelNo", null, new { style = "width:150px;", isViewMode = @ViewBag.isViewMode })
                    </div>
                    <div class="usr-label" style="width:300px;">
                        @Resources.ICS033.lblBillingClientContactPerson
                    </div>
                    <div class="usr-object" style="width:250px; background-color:@ViewBag.txtBackgroundColor;">
                        @Html.CommonTextBox("txtBillingClientContactPerson", null, new { style = "width:250px;", isViewMode = @ViewBag.isViewMode })
                    </div>
 
                </div>
                <div style="height:30px;">
                    &nbsp
                </div>
                <div class="usr-row">
                    <div style="width:@ViewBag.LabelCol1Width; font-size: 12pt; font-weight: bold; text-align: right; float:left; margin-right:5px; height:100%;  margin-top: 3px; line-height: 14px; padding-bottom: 4px;">
                        @Resources.ICS033.lblTotalUnpaidAmount
                    </div>
                    <div class="usr-object" style="width:110px; background-color:@ViewBag.txtBackgroundColor;">
                        <table class="ics033AmountTable">
                            <tr>
                                <td style="width: 60px;">@ViewBag.CurrencyTypeLocalName</td>
                                <td>
                                    @Html.CommonTextBox("txtTotalUnpaidAmount", null, new { style = "width:100px;", isViewMode = @ViewBag.isViewMode })
                                </td>
                            </tr>
                            <tr>
                                <td>@ViewBag.CurrencyTypeUsName</td>
                                <td>
                                    @Html.CommonTextBox("txtTotalUnpaidAmountUs", null, new { style = "width:100px;", isViewMode = @ViewBag.isViewMode })
                                </td>
                            </tr>
                        </table>
                         
                    </div>
                    @*<div id="unittxtTotalUnpaidAmount" class="label-unit">THB</div>*@
                    
                </div>
                <div class="usr-row">
                </div>
                <div class="usr-row">
                     <img alt='FirstFeeDetail' src='../../Content/images/icon/firstFee.png' style='margin-top:0px;' /> = @Resources.ICS033.lblIconFirstFeeDetail,
                     <img alt='CreditNoteIssueDetail' src='../../Content/images/icon/creditNote.png' style='margin-top:0px;' /> = @Resources.ICS033.lblIconCreditNoteIssuedDetail
                </div>
                <div>
                    <div id="ICS033_ViewUnpaidBillingDetailListGrid" style="height:100%; margin-left: 4px;"></div>
                </div>
                <div class="usr-row">
                </div>

            </div>

            <div class="usr-clear-style" style="height:0px">&nbsp;</div>
        </div>

    <!-- End Form 1 -->
    </form>