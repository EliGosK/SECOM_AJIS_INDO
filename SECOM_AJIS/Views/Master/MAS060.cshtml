@using SECOM_AJIS.Common.Helpers
@using SECOM_AJIS.Presentation.Common.Helpers
@using SECOM_AJIS.Presentation.Master.Helpers
@{
    ViewBag.LabelWidth = "180px";
    ViewBag.ShortInputWidth = "100px";
}

@section page_header{
    <script src="../../Scripts/jquery.maskedinput-1.3.js" type="text/javascript"></script>
    <script src="../../Scripts/Master/MAS060.js" type="text/javascript"></script>
    <script src="../../Scripts/Base/AutoComplete.js" type="text/javascript"></script>

    <script type="text/javascript">
        var MAS060Data =
        {
            "PageRow": "@ViewBag.PageRow",
            "HasAddPermission": "@ViewBag.HasAddPermission",
            "HasEditPermission": "@ViewBag.HasEditPermission",
            "HasDeletePermission": "@ViewBag.HasDeletePermission",
            "AddMode": "@ViewBag.AddMode",
            "EditMode": "@ViewBag.EditMode"
        };
    </script>
}


<!-- SEARCH CUSTOMER GROUP SECTION ====================================================================================================================== -->
<div id="SearchCustGroup_Section" class="main-table">
    <div class="table-header">
       @Resources.MAS060.lblSearchCustomerGroup
    </div>
    <form id="MAS060_Search" action='#'>
        <div class="usr-row">
            <div class="usr-label" style="width:@ViewBag.LabelWidth;">
                    @Resources.MAS060.lblGroupCode
            </div>
            <div class="usr-object">
                @Html.CommonTextBox("Search_GroupCode", "", new { style = "width:200px;", maxlength = "8" })
            </div>
        </div>
        <div class="usr-row">
            <div class="usr-label" style="width:@ViewBag.LabelWidth;">
                    @Resources.MAS060.lblGroupName
            </div>
            <div class="usr-object">
                @Html.CommonTextBox("Search_GroupName", "", new { style = "width:768px;", maxlength = "50" })
            </div>
        </div>
        <div class="usr-row">
            <div style="text-align: right ; margin-top:5px">
                @Html.CommonButton("btnSearch", @Resources.MAS060.btnSearch, new { type = "button" })
                @*&nbsp;*@
                @Html.CommonButton("btnClear", @Resources.MAS060.btnClear, new { type = "button" })
                @*&nbsp;*@
                @Html.CommonButton("btnNew", @Resources.MAS060.btnNew, new { type = "button" })
            </div>
        </div>
    </form>
    <div class="usr-clear-style" style="height: 0%">&nbsp;</div>
</div>

<!-- RESULT LIST SECTION ====================================================================================================================== -->

<div id="ResultList_Section" class="main-table">
    <div class="table-header">
            @Resources.MAS060.lblResultList
    </div>
    <div>
        <div id="grid_result" style="width: 99%; margin-left: 4px;"></div>
    </div>
    <div class="usr-clear-style" style="height: 0%">&nbsp;</div>
</div>

<!-- MAINTAIN CUSTOMER GROUP SECTION ====================================================================================================================== -->

<div id="MaintainCustGroup_Section" class="main-table">
    <div class="table-header">
       @Resources.MAS060.lblMaintainCustomerGroup
    </div>
    <form id="MAS060_CustomerGroup" action='#'>
        <div class="usr-row">
            <div class="usr-label" style="width:@ViewBag.LabelWidth;">
                    &nbsp;
            </div>
            <div class="usr-object">
                @Html.CommonCheckButton("DeleteFlag", @Resources.MAS060.lblDeleteCustomerGroup )
            </div>
        </div>
        <div class="usr-row">
            <div class="usr-label" style="width:@ViewBag.LabelWidth;">
                 @Resources.MAS060.lblGroupCode
            </div>
            <div class="usr-object">
                @Html.CommonTextBox("GroupCode", "", new { style = "width:200px;", @readonly = "readonly" })
            </div>
        </div>
        <div class="usr-row">
            <div class="usr-label" style="width:@ViewBag.LabelWidth;">
                 @Resources.MAS060.lblGroupNameEn
            </div>
            <div class="usr-object">
                @Html.CommonTextBox("GroupNameEN", "", new { style = "width:700px;", maxlength = "50" })
                @Html.RequireFiled()
            </div>
        </div>
        <div class="usr-row">
            <div class="usr-label" style="width:@ViewBag.LabelWidth;">
                 @Resources.MAS060.lblGroupNameLc
            </div>
            <div class="usr-object">
                @Html.CommonTextBox("GroupNameLC", "", new { style = "width:700px;", maxlength = "50" })
             
            </div>
        </div>
        <div class="usr-row">
            <div class="usr-label" style="width:@ViewBag.LabelWidth;">
                 @Resources.MAS060.lblMemo
            </div>
            <div class="usr-object">
                @Html.CommonTextArea("Memo", "", new { style = "width:700px;height:65px; overflow: auto", maxlength = "500" })
            </div>
        </div>
        <div class="usr-row">
            <div class="usr-label" style="width:@ViewBag.LabelWidth;">
                 @Resources.MAS060.lblOfficeName
            </div>
            <div class="usr-object">
                 @Html.AllOfficeNormalCbo("GroupOfficeCode", new { style = "width:303px;" })
            </div>
        </div>
        <div class="usr-row">
            <div class="usr-label" style="width:@ViewBag.LabelWidth;">
                @Resources.MAS060.lblGroupStaffName
            </div>
            <div style="float:left;margin-right:5px;">
                @Html.CommonTextBox("GroupEmpNo", "", new { style = "width:100px;", maxlength = "10" })
            </div>
            <div style="float:left;">
                @Html.CommonTextBox("GroupEmpName", "", new { style = "width:189px;", maxlength = "70", @readonly = "readonly" })
            </div>
        </div>
        <div class="usr-row">
                &nbsp;
        </div>
        @*<div class="usr-row">
            <div style="text-align: right;">
                @Html.CommonButton("btnConfirm", @Resources.MAS060.btnConfirm, new { type = "button" })
                &nbsp;
                @Html.CommonButton("btnCancel", @Resources.MAS060.btnCancel, new { type = "button" })
            </div>
        </div>*@
    </form>
    <div class="usr-clear-style" style="height: 0%">&nbsp;</div>
</div>
