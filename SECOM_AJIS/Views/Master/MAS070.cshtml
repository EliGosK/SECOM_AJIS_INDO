@using SECOM_AJIS.Common.Helpers
@using SECOM_AJIS.Presentation.Master.Helpers;
@{
    ViewBag.LabelWidth = "180px";
    ViewBag.RightLabelWidth = "100px";
    ViewBag.ObjectWidth = "300px";
    ViewBag.RightObjectWidth = "180px";
}
@section page_header{
    <script src="../../Scripts/jquery.maskedinput-1.3.js" type="text/javascript"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/dhtmlxcalendar.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/excells/dhtmlxgrid_excell_dhxcalendar.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/Base/AutoComplete.js")" ></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/Base/ComboBox.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/Base/DateTimePicker.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/Master/MAS070.js")" ></script>

    <script type="text/javascript">
        var c_yes = '@Resources.MAS070.cellYes';
        var c_no = '@Resources.MAS070.cellNo';
        var default_position = "@ViewBag.DefaultPositionCode";
        var c_cancel = "@Resources.MAS070.lblCancel";
        var c_remove = "@Resources.MAS070.lblRemove";
        var c_delete = "@Resources.MAS070.lblDelete";
        var c_email_suffix = "@ViewBag.EmailSuffix";
        var c_email_length = "@ViewBag.EmailLength";
        var permission =
        {
            ADD: "@ViewBag.HasPermissionAdd",
            EDIT: "@ViewBag.HasPermissionEdit",
            DELETE: "@ViewBag.HasPermissionDelete"
        };
    </script>

    <link href="../../Content/css/Master/MAS070.css" rel="stylesheet" type="text/css"/>
}
<!-- SEARCH USER SECTION ======================================================================================================================== -->
<div id="Search_User" class="main-table">
    <div class="table-header">
        @Resources.MAS070.lblSearchUser
    </div>
    <form id="MAS070_Search" action='#'>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelWidth;">
            @Resources.MAS070.lblEmployeeCode
        </div>
        <div class="usr-object">
            @Html.CommonTextBox("txtEmployeeCodeSearch", "", new { style = "width:160px;", maxlength = "10" })
        </div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelWidth;">
            @Resources.MAS070.lblName
        </div>
        <div class="usr-object">
            @Html.CommonTextBox("txtEmployeeNameSearch", "", new { style = "width:769px", maxlength = "101" })
        </div>
    </div>
    <div class="usr-row">
        <div style="text-align: right; margin-top:5px">
            @Html.CommonButton("btnSearch", @Resources.MAS070.btnSearch, new { type = "button" })
            @*&nbsp;*@
            @Html.CommonButton("btnClear", @Resources.MAS070.btnClear, new { type = "button" })
            @*&nbsp;*@
            @Html.CommonButton("btnNew", @Resources.MAS070.btnNew, new { type = "button" })
        </div>
    </div>
    </form>
    <div class="usr-clear-style" style="height: 0%">&nbsp;</div>
</div>
<!-- SEARCH RESULT SECTION ====================================================================================================================== -->
<div id="Search_Result" class="main-table">
    <div class="table-header">
        @Resources.MAS070.lblResultList
    </div>
    <div>
        <div id="grid_result" style="width: 99%; margin-left: 4px;">
        </div>
    </div>
    <div class="usr-clear-style">&nbsp;</div>
</div>
<!-- EMPLOYEE DETAIL SECTION ==================================================================================================================== -->
<div id="Employee_Detail" class="main-table">
    <div class="table-header">
        @Resources.MAS070.lblMaintainUser
    </div>
    <form id="MAS070_EmployeeDetail" action="#">
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelWidth;">
            &nbsp;</div>
        <div class="usr-object">
            @Html.CheckBox("DeleteFlag")
            @Resources.MAS070.lblDeleteUser
        </div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelWidth;">
            @Resources.MAS070.lblEmployeeCode
        </div>
        <div class="usr-object">
            @Html.CommonTextBox("EmpNo", "", new { style = "width:160px;", maxlength = "10" })
            @Html.RequireFiled()
        </div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelWidth;">
            @Resources.MAS070.lblFirstNameEng
        </div>
        <div class="usr-object">
            @Html.CommonTextBox("EmpFirstNameEN", "", new { style = "width:700px;", maxlength = "50" })
            @Html.RequireFiled()
        </div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelWidth;">
            @Resources.MAS070.lblLastNameEng
        </div>
        <div class="usr-object">
            @Html.CommonTextBox("EmpLastNameEN", "", new { style = "width:700px;", maxlength = "50" })
            @Html.RequireFiled()
        </div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelWidth;">
            @Resources.MAS070.lblFirstNameLC
        </div>
        <div class="usr-object">
            @Html.CommonTextBox("EmpFirstNameLC", "", new { style = "width:700px;", maxlength = "50" })

        </div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelWidth;">
            @Resources.MAS070.lblLastnameLC
        </div>
        <div class="usr-object">
            @Html.CommonTextBox("EmpLastNameLC", "", new { style = "width:700px;", maxlength = "50" })

        </div>
    </div>
    <div id="start_end_Date_container" class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelWidth;">
            @Resources.MAS070.lblStartDate
        </div>
        <div class="usr-object" style="width:@ViewBag.ObjectWidth;">
            @Html.CommonTextBox("StartDate", "", new { style = "width:100px;", maxlength = "15" })
            @Html.RequireFiled()
            @Resources.MAS070.lblddMMyyyy
        </div>
        <div class="usr-label" style="width:@ViewBag.RightLabelWidth;">
            @Resources.MAS070.lblResignDate
        </div>
        <div class="usr-object" style="width:@ViewBag.ObjectWidth;">
            @Html.CommonTextBox("EndDate", "", new { style = "width:100px;", maxlength = "15" })
            @Resources.MAS070.lblddMMyyyy
        </div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelWidth;">
            @Resources.MAS070.lblEmail
        </div>
        <div class="usr-object">
            @Html.CommonTextBox("EmailAddress", "", new { style = "width:160px;" })
            @ViewBag.EmailSuffix
            @*@Html.Hidden("SecomAddress", @Resources.MAS070.lblSecomAddr)*@
        </div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelWidth;">
            &nbsp;</div>
        <div class="usr-object">
            @Html.CheckBox("IncidentNotificationFlag")
            @Resources.MAS070.lblIncidentNotification
        </div>
    </div>
    <div class="usr-row" id="change-password-flag-area">
        <div class="usr-label" style="width:@ViewBag.LabelWidth;">
            &nbsp;
        </div>
        <div class="usr-object">
            <input type="CheckBox" id="ChangePasswordFlag" />
            @Resources.MAS070.lblChangePassword
        </div>
    </div>
    <div class="usr-row" id="password-area">
        <div class="usr-label" style="width:@ViewBag.LabelWidth;">
            @Resources.MAS070.lblPassword
        </div>
        <div class="usr-object">
            @Html.Hidden("currentPassword")
            @Html.CommonTextBox("Password", "", new { type = "password" })
            @Html.RequireFiled()
        </div>
    </div>
    @Html.Hidden("EmpUpdateDate", "")
    @Html.Hidden("EmpUpdateBy", "")
    <div class="usr-clear-style" style="height: 0%">&nbsp;</div>
    </form>

    <!-- BELONGING SECTION ---------------------------------------------------------------- -->
    <div id="Belonging_List" class="sub-table" style="margin-top:10px">
        <div class="table-sub-header">
            @Resources.MAS070.lblBelongingList
        </div>
        @*<div id="belGrid_result" style="width:99%; background-color:white;overflow: hidden;position:inherit">*@
        <div class="usr-row">
            <div id="belGrid_result" style="width: 99%; margin-left: 4px;">
            </div>
            <div class="usr-clear-style">&nbsp;</div>
        </div>
        <div class="usr-row">
            <div style="text-align: right; margin-top: 10px; margin-right: 5px">
                @Html.CommonButton("btnRegisBelonging", @Resources.MAS070.btnRegisNewBelonging, new { style = "width:200px;", type = "button" })
            </div>
        </div>

        <div class="usr-clear-style">&nbsp;</div>
    </div>

    <div style="height:10px;"></div>

    <!-- BELONGING DETAIL ------------------------------------------------------------- -->
    <div id="Belonging_Detail" class="sub-table">
        <div class="table-sub-header">
            @Resources.MAS070.lblBelongingInfo
        </div>
        <form id="MAS070_BelongingDetail" action="#">
        @Html.Hidden("EmpNo")
        @Html.Hidden("BelongingID")
        <div class="usr-row">
            <div class="usr-label" style="width:@ViewBag.LabelWidth;">
                &nbsp;</div>
            <div class="usr-object">
                @Html.CheckBox("MainDepartmentFlag")
                @Resources.MAS070.lblPrimaryBel
            </div>
        </div>
        <div class="usr-row">
            <div class="usr-label" style="width:@ViewBag.LabelWidth;">
                @Resources.MAS070.lblOffice
            </div>
            <div class="usr-object">
                @*@Html.OfficeComboBox("OfficeCode", new { style = "width:160px;"})*@
                @Html.AllOfficeNormalCbo("OfficeCode", new { style = "width:273px;" })
                @Html.RequireFiled()
            </div>
        </div>
        <div class="usr-row">
            <div class="usr-label" style="width:@ViewBag.LabelWidth;">
                @Resources.MAS070.lblDepartment
            </div>
            <div class="usr-object">
                @Html.DepartmetComboBox("DepartmentCode", new { style = "width:273px;" })
                @Html.RequireFiled()
            </div>
        </div>
        <div class="usr-row">
            <div class="usr-label" style="width:@ViewBag.LabelWidth;">
                @Resources.MAS070.lblPosition
            </div>
            <div class="usr-object">
                @Html.PositionComboBox("PositionCode", new { style = "width:273px;" }, true)
                @Html.RequireFiled()
            </div>
        </div>
        <div class="usr-row">
            <div class="usr-label" style="width:@ViewBag.LabelWidth;">&nbsp;</div>
            <div class="usr-object">
                @Html.CheckBox("DepPersonInchargeFlag")
                @Resources.MAS070.lblDepartmentPersonInCharge
                &nbsp;&nbsp;&nbsp;&nbsp;
                @Html.CheckBox("ApprovalAuthorityPersonFlag")
                @Resources.MAS070.lblApprPerson
            </div>
        </div>
        <div class="usr-row">
            <div class="usr-label" style="width:@ViewBag.LabelWidth;">
                @Resources.MAS070.lblValidPeriod
            </div>
            <div class="usr-object">
                @Html.CommonTextBox("ValidFrom", "", new { style = "width:100px;"})
                @Html.RequireFiled()
                ~
                @Html.CommonTextBox("ValidTo", "", new { style = "width:100px;"})
                @Resources.MAS070.lblddMMyyyy
            </div>
        </div>
        <div class="usr-clear-style" style="height: 0%"> &nbsp;</div>

        <div class="usr-row">
            <div style="text-align: right; margin-right:5px;">
                @Html.CommonButton("btnAddUpd", @Resources.MAS070.btnAddUpd, new { type = "button" })
                &nbsp;
                @Html.CommonButton("btnCancelBel", @Resources.MAS070.btnCancel, new { type = "button" })
            </div>
        </div>
        </form>
        <div class="usr-clear-style">&nbsp;</div>
    </div>

     <div class="usr-clear-style">&nbsp;</div>
</div>
