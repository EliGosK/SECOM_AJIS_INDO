        </div>
        <div class="usr-row">
            <div class="usr-label" style="width:@ViewBag.LabelWidth;">
                @Resources.MAS090.lblNameForCustEng
            </div>
            <div class="usr-object">
                @Html.CommonTextBox("InstrumentNameForCustomerEN", "", new { style = "width:730px;", maxlength = "100" })
