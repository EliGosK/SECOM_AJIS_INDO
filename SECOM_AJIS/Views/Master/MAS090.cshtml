                            @*@Html.NumericTextBox("MoveUnitPriceText", null, new { style = "width:120px;" })*@
                            @Html.NumericTextBoxWithMultipleCurrency("MoveUnitPriceText", null, CurrencyUtil.C_CURRENCY_LOCAL)
