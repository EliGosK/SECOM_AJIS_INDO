@using SECOM_AJIS.Common.Util.ConstantValue;
@using SECOM_AJIS.Common.Helpers

@using SECOM_AJIS.Presentation.Common.Helpers;
@using SECOM_AJIS.Presentation.Master.Helpers;


@{
    ViewBag.lblWidth = "185px";
}

@section page_header{
    <script src="../../Scripts/jquery.maskedinput-1.3.js" type="text/javascript"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/dhtmlxcommon.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/dhtmlxgrid.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/ext/dhtmlxgrid_data.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/ext/dhtmlxgrid_pgn.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/dhtmlxgridcell.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/Base/AutoComplete.js")" ></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/Base/ComboBox.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/Base/GridControl.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/Master/MAS130.js")" ></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/Common/Dialog.js")" ></script>

    <script type="text/javascript">
            var permission =
        {
            ADD: "@ViewBag.HasPermissionAdd" == "True" ? true : false,
            EDIT: "@ViewBag.HasPermissionEdit" == "True" ? true : false
        };
            var msgCancel = "@Resources.MAS130.msgCancel";
    </script>
}



<!-- SEARCH CRITERIA SECTION ==================================================================================================================== -->
<div id="Search_Criteria" class="main-table">
    <div class="table-header">
       @Resources.MAS130.lblSearchSafetyStock
    </div>
    <form id="MAS130_SearchCriteria" action='#' >
        <div class="usr-row">
            <div class="usr-label" style="width:@ViewBag.lblWidth;">
                @Resources.MAS130.lblInstrument
            </div>
            <div class="usr-object">
                @Html.CommonTextBox("InstrumentCodeSearch", null, new { style = "width:130px;", maxlength = "50" })
                &nbsp
            </div>
            <div class="usr-object">
                @Html.CommonTextBox("InstrumentNameSearch", null, new { style = "width:300px;", ReadOnly = "readonly" })
                &nbsp
            </div>
            <div class="usr-object">
                @Html.CommonButton("btnSearchInstrumentSearch", @Resources.MAS130.btnSearchInstrument, new { type = "button", style = "width:150px;" })
                &nbsp
            </div>
        </div>
        <div class="usr-row">
            <div style="text-align: right; margin-top:5px">
                @Html.CommonButton("btnSearch", @Resources.MAS130.btnSearch, new { type = "button" })
                @Html.CommonButton("btnClear", @Resources.MAS130.btnClear, new { type = "button" })
                @Html.CommonButton("btnNew", @Resources.MAS130.btnNew, new { type = "button" })
            </div>
        </div>
        <div class="usr-clear-style" style="height:0%">&nbsp;</div>
    </form>
</div>

<!-- SEARCH RESULT SECTION ====================================================================================================================== -->
<div id="Result_List" class="main-table">
    <div class="table-header">
        @Resources.MAS130.lblResultList
    </div>
    <div id="grid_result" style="width:99%;margin-left:4px;"></div>
    <div class="usr-clear-style">&nbsp;</div>
</div>

<!-- RESULT DETAIL SECTION ====================================================================================================================== -->
<div id="Result_Detail" class="main-table">
    <div class="table-header">
       @Resources.MAS130.lblSafetyStockInformation
    </div>
    <form id="MAS130_ResultDetail" action="#">
        <div class="usr-row">
            <div class="usr-label" style="width:@ViewBag.lblWidth;">
                @Resources.MAS130.lblInstrument
            </div>
            <div class="usr-object">
                @Html.CommonTextBox("InstrumentCode", null, new { style = "width:130px;", maxlength = "50", ReadOnly = "readonly" })
                &nbsp;
            </div>
            <div class="usr-object">
                @Html.CommonTextBox("InstrumentName", null, new { style = "width:300px;", ReadOnly = "readonly" })
                @Html.RequireFiled()
                &nbsp;
            </div>
            <div class="usr-object">
                @Html.CommonButton("btnSearchInstrument", @Resources.MAS130.btnSearchInstrument, new { type = "button", style = "width:150px;"})
            </div>
        </div>
        <div class="usr-row">
            <div class="usr-label" style="width:@ViewBag.lblWidth;">
            @Resources.MAS130.lblInventoryFixedQuantity
            </div>
            <div class="usr-object">
            @Html.NumericTextBox("InventoryFixedQuantity", null, new { style = "width:130px;" })
            </div>
            &nbsp;@Html.RequireFiled()
        </div>
        <div class="usr-clear-style" style="height:0%">&nbsp;</div>
    </form>
</div>
