@using SECOM_AJIS.Common.Helpers
@using SECOM_AJIS.Presentation.Common.Helpers
@using SECOM_AJIS.Presentation.Master.Helpers
@{
    ViewBag.LabelWidth = "180px";
}
@section page_header{
    <script src="../../Scripts/jquery.maskedinput-1.3.js" type="text/javascript"></script>
    <script src="../../Scripts/Master/MAS100.js" type="text/javascript"></script>
    <script src="../../Scripts/Common/Dialog.js" type="text/javascript"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/Base/AutoComplete.js")" ></script>

    <script type="text/javascript">
        var MAS100Data =
        {
            "PageRow": "@ViewBag.PageRow",
            "HasAddPermission": "@ViewBag.HasAddPermission",
            "HasDeletePermission": "@ViewBag.HasDeletePermission",
            "InstExpParent": "@ViewBag.InstExpParent",
            "InstExpChild": "@ViewBag.InstExpChild"
        };
    </script>
}

<!-- PARENT INSTRUMENT SECTION ====================================================================================================================== -->
<div id="ParentInst_Section" class="main-table">
    <div class="table-header">
        @Resources.MAS100.lblParentinstrument
    </div>
    <form id="MAS100_ParentInst" action='#'>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelWidth;">
            @Resources.MAS100.lblParentinstrumentcode
        </div>
        <div class="usr-object" style="margin-right:5px;">
            @Html.CommonTextBox("ParentInstrumentCode", "", new { style = "width:170px;", maxlength = "50" })</div>
        <div class="usr-object">
            @Html.CommonButton("btnRetrieve", @Resources.MAS100.btnRetrieve, new { type = "button", style = "width:100px;" })
            @Html.CommonButton("btnSearchParentInstrument", @Resources.MAS100.btnSearchParentInstrument, new { type = "button", style = "width:250px;" })
        </div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelWidth;">
            @Resources.MAS100.lblParentInstrumentName
        </div>
        <div class="usr-object">
            @Html.CommonTextBox("ParentInstrumentName", "", new { style = "width:765px;", @readonly = "readonly" })
        </div>
    </div>
    <div id="dlgMAS100" class="main-popup-dialog">
        <div class="popup-dialog">
        </div>
    </div>
    </form>
    <div class="usr-clear-style" style="height: 0%">
        &nbsp;</div>
</div>
<!-- CHILD INSTRUMENT SECTION ====================================================================================================================== -->
<div id="ChildInst_Section" class="main-table">
    <div class="table-header">
        @Resources.MAS100.lblChildInstrumentDetails
    </div>
    <form id="MAS100_ChildInst" action='#'>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelWidth;">
            @Resources.MAS100.lblChildInstrumentCode
        </div>
           <div class="usr-object" style="margin-right:5px;">
            @Html.CommonTextBox("ChildInstrumentCode", "", new { style = "width:170px;", maxlength = "50" })
            @Html.CommonTextBox("HiddenTextbox", "", new { style = "width:170px;", maxlength = "50" })
        </div>
        <div class="usr-object">
            @Html.CommonButton("btnAdd", @Resources.MAS100.btnAdd, new { type = "button", style = "width:100px;" })
            @Html.CommonButton("btnSearchChildInstrument", @Resources.MAS100.btnSearchChildInstrument, new { type = "button", style = "width:250px;" })
        </div>
    </div>
    </form>
    <div style="margin-top: 12px">
        &nbsp</div>
    <div>
        <div id="grid_result" style="width: 99%; margin-left: 4px;">
        </div>
    </div>
    <div class="usr-clear-style" style="height: 0%">
        &nbsp;</div>
</div>
