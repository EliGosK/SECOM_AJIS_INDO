@using SECOM_AJIS.Common.Helpers
@using SECOM_AJIS.Presentation.Contract.Helpers;
@using SECOM_AJIS.Presentation.Common.Helpers;
@using SECOM_AJIS.Common.Helpers;
@{
    ViewBag.LabelWidth = "250px";
    ViewBag.LabelCondWidth = "245px";
    ViewBag.LabelBillingWidth = "183px";
    ViewBag.RightLabelWidth = "220px";
    ViewBag.ObjectWidth = "160px";
    ViewBag.RightObjectWidth = "180px";
}

@section page_header{
    <script type="text/javascript" src="@Url.Content("~/Scripts/Base/AutoComplete.js")" ></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/Base/ComboBox.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/Base/DateTimePicker.js")"></script>
    @*<script type="text/javascript" src="@Url.Content("~/Scripts/Base/Master.js")"></script>*@
    <script type="text/javascript" src="@Url.Content("~/Scripts/Contract/CTS290.js")" ></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/ext/dhtmlxgrid_nxml.js")" ></script>
}

<div class="table-header">
    <form id="CTS290_Search" action='#' >

        <div id="divSpecifySearchCondition" class="main-table" >
            <div class="table-header">
                <div class="usr-label">
                    @Resources.CTS290.lblSearchCriteria
                </div>                                  
            </div>
            <div>
                <div id="divPeriod" class="usr-row">
                    <div class="usr-label" style="width:@ViewBag.LabelCondWidth;">
                        @Resources.CTS290.lblExpireWarrantyMonth
                        @Html.RequireFiled()
                    </div>

                    @Html.Hidden("DefaultMonth", (int)@ViewBag.DefaultMonth)
                    @Html.Hidden("DefaultYear", (int)@ViewBag.DefaultYear) 

                    <div class="usr-object">
                        @Html.MonthComboBox("WarrantyMonthFrom", new { style = "width:100px;", selected = (int)@ViewBag.DefaultMonth }, false)
                        @Html.YearComboBox("WarrantyYearFrom", new { style = "width:60px;", selected = (int)@ViewBag.DefaultYear }, false)     @*(int)@ViewBag.DefaultYear*@
                    </div>
                    <div class="usr-label">&nbsp;~&nbsp;
                    </div>
                    <div class="usr-object">
                        @Html.MonthComboBox("WarrantyMonthTo", new { style = "width:100px;", selected = (int)@ViewBag.DefaultMonth }, false)
                        @Html.YearComboBox("WarrantyYearTo", new { style = "width:60px;", selected = (int)@ViewBag.DefaultYear }, false)
                    </div>            
                </div>
                <div class="usr-row">
                    <div class="usr-label" style="width: @ViewBag.LabelCondWidth;">
                        @Resources.CTS290.lblOperationOffice
                    </div>
                    <div class="usr-object">
                        @Html.OperationOfficeAuthorityCbo("OperationOffice", new { style = "height: 22px; width: 165px;" }, true, "ALL")
                    </div>
                </div>
                <div class="usr-row">
                    <div class="usr-label" style="width: @ViewBag.LabelCondWidth;">
                        @Resources.CTS290.lblSaleContractOffice
                    </div>
                    <div class="usr-object">
                        @Html.ContractOfficeAuthorityCbo("SaleContractOffice", new { style = "height: 22px; width: 165px;" }, true, "ALL")
                    </div>
                </div>

                <div class="usr-row" style="height:5px"></div>

                <div class="usr-row">
                    <div class="usr-label" style="width:733px;">&nbsp;</div>  
                    <div class="usr-object">
                            @Html.CommonButton("btnSearch", @Resources.CTS290.lblSearch, new { style = "width:100px;", type = "button" }) 
                    </div>    
                    <div class="usr-label" style="width:1px;">&nbsp;</div> 
                    <div class="usr-object">
                            @Html.CommonButton("btnClear", @Resources.CTS290.lblClear, new { style = "width:100px;", type = "button" }) 
                    </div>                                
                </div>
     
                <div class="usr-row"></div>
            </div>
        </div>

        <div id="divSearchResultList" class="main-table">
            <div class="table-header">
                <div class="usr-label">
                    @Resources.CTS290.TitleSearchResultList
                </div>                                  
            </div>
            <div>
                <div id="gridSearchResult" style="width: 99%; margin-left: 4px;"></div>  
                @Html.Hidden("PageRow", (int)@ViewBag.PageRow)                              
            </div>

            <div id="Search_Button">
                <div style="clear:both;width:50px;width:950px;margin:10px 0 0 5px;">
                    <div style="float:right;">
                        @Html.CommonButton("btnDownload", @Resources.CTS290.lblDownload, new { style = "width:150px;", type = "button" })
                        <iframe id="ifDownload" style="visibility: hidden; width: 0px; height: 0px;"></iframe>
                    </div>
                    <div style="clear:both;"></div>
                </div>
                <div class="usr-clear-style" style="height:0%"></div>
            </div>
            <div class="usr-clear-style" style="height:0%">&nbsp;</div>

        </div>

    </form>

    <div class="usr-row" style="height: 5px"></div>
</div>    

