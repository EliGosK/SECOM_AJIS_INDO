@using SECOM_AJIS.Common.Helpers;
@using SECOM_AJIS.Presentation.Common.Helpers;
@{
    Layout = "";
    ViewBag.LabelCol1Width = "220px";
    ViewBag.LabelCol2Width = "120px";
    ViewBag.LabelCol3Width = "130px";
    ViewBag.ObjectCol1Width = "130px";
    ViewBag.ObjectCol2Width = "130px";
    ViewBag.ObjectCol3Width = "200px";
    ViewBag.ObjectColMergeWidth = "720px";

    ViewBag.SubTableWidth = "550px";
    ViewBag.SubLabelCol1Width = "120px";
}
<script type="text/javascript" src="@Url.Content("~/Scripts/Contract/CTS010/CTS010_14.js")"></script>
<div style="display:none;">
    @Html.Hidden("HasSiteData", (bool)@ViewBag.HasSiteData)
</div>
<div id="divSiteCustomerInfo" class="main-table">
    <div class="table-header">@Resources.CTS010.lblSiteInfo</div>
    <div id="divSpecifySite_CopyNameAddress" class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelCol1Width;">&nbsp;</div>
        <div class="usr-object" style="padding-bottom:5px;">
            <div class="usr-row">
                <div class="usr-object">
                    <div id="divSpecifySite" class="sub-table" style="float:left;width:360px;margin-right:10px;">
                        <div class="table-header">@Resources.CTS010.lblSpecifyCode</div>
                        <div class="usr-row">
                            <div class="usr-label" style="width:120px;">@Resources.CTS010.lblSiteCode</div>
                            <div class="usr-object">
                                @Html.CommonTextBox("SiteCustCode", (string)@ViewBag.SiteCodeForSearch, new { @readonly = true, style = "width:120px;" })&nbsp;-
                                @Html.CommonTextBox("SiteCustCodeNo", (string)@ViewBag.SiteNo, new { maxlength = "4", style = "width:50px;" })
                            </div>
                        </div>
                        <div class="usr-row usr-row-space">
                            <div class="usr-label" style="width:120px;">&nbsp;</div>
                            <div class="usr-object" style="padding-bottom: 17px;">
                                @Html.CommonButton("btnRetrieveSiteData", (string)@Resources.CTS010.btnRetrieve, new { style = "width:80px;" })&nbsp;
                                @Html.CommonButton("btnSearchSite", (string)@Resources.CTS010.btnSearchSite, new { style = "width:130px;" })
                            </div>
                        </div>
                        <div class="usr-clear-style">&nbsp;</div>
                    </div>
                    <div id="divCopyNameAddressInfo" class="sub-table" style="float:left;width:350px;">
                        <div class="table-header">@Resources.CTS010.lblCopyNameAddressInfo</div>
                        <div class="usr-row">
                            <div class="usr-object"  style="margin-left:5px;">
                                @Html.CommonRadioButton("rdoContractTarget", (string)@Resources.CTS010.rdoContractTargetPurchaser, (string)@SECOM_AJIS.Common.Util.ConstantValue.CustPartType.C_CUST_PART_TYPE_CONTRACT_TARGET, false, "CopyNameAddrInfoGroup")
                            </div>
                        </div>
                        <div class="usr-row">
                            <div class="usr-object"  style="margin-left:5px;">
                                @Html.CommonRadioButton("rdoRealCustomer", (string)@Resources.CTS010.rdoReadCustomer, (string)@SECOM_AJIS.Common.Util.ConstantValue.CustPartType.C_CUST_PART_TYPE_REAL_CUST, true, "CopyNameAddrInfoGroup")
                            </div>
                        </div>
                        <div class="usr-row">
                            <div style="float:right;">
                                <div class="usr-object" style="padding-right:11px;">
                                    @Html.CommonButton("btnCopy", (string)@Resources.CTS010.btnCopy, new { style = "width:100px;" })
                                </div>
                            </div>
                        </div>
                        <div class="usr-clear-style">&nbsp;</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="usr-row usr-row-space">
        <div class="usr-label" style="width:@ViewBag.LabelCol1Width;">@Resources.CTS010.lblSiteCode</div>
        <div class="usr-object" style="margin-right:5px;">
            @Html.CommonTextBox("SiteCodeShort", (string)@ViewBag.SiteCode, new { style = "width:" + @ViewBag.ObjectCol1Width + ";", @readonly = true })
        </div>
        <div class="usr-object">
            @Html.CommonButton("btnNewEditSite", (string)@Resources.CTS010.btnNewEditSiteInfo, new { style = "width:200px;" })
            @Html.CommonButton("btnClearSite", (string)@Resources.CTS010.btnClearSite, new { style = "width:150px;" })
        </div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelCol1Width;">@Resources.CTS010.lblNameEN</div>
        <div class="usr-object" style="width:@ViewBag.ObjectColMergeWidth;">
            @Html.CommonTextBox("SiteNameEN", (string)@ViewBag.SiteNameEN, new { style = "width:" + @ViewBag.ObjectColMergeWidth + ";", @readonly = true })
        </div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelCol1Width;">@Resources.CTS010.lblAddressEN</div>
        <div class="usr-object" style="width:@ViewBag.ObjectColMergeWidth;">
            @Html.CommonTextBox("AddressFullEN", (string)@ViewBag.AddressFullEN, new { style = "width:" + @ViewBag.ObjectColMergeWidth + ";", @readonly = true })
        </div>
    </div>
    <div class="usr-row usr-row-space">
        <div class="usr-label" style="width:@ViewBag.LabelCol1Width;">@Resources.CTS010.lblNameLC</div>
        <div class="usr-object" style="width:@ViewBag.ObjectColMergeWidth;">
            @Html.CommonTextBox("SiteNameLC", (string)@ViewBag.SiteNameLC, new { style = "width:" + @ViewBag.ObjectColMergeWidth + ";", @readonly = true })
        </div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelCol1Width;">@Resources.CTS010.lblAddressLC</div>
        <div class="usr-object" style="width:@ViewBag.ObjectColMergeWidth;">
            @Html.CommonTextBox("AddressFullLC", (string)@ViewBag.AddressFullLC, new { style = "width:" + @ViewBag.ObjectColMergeWidth + ";", @readonly = true })
        </div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelCol1Width;">@Resources.CTS010.lblPhoneNo</div>
        <div class="usr-object" style="width:@ViewBag.ObjectCol1Width;">
            @Html.CommonTextBox("PhoneNo", (string)@ViewBag.PhoneNo, new { style = "width:" + @ViewBag.ObjectCol1Width + ";", @readonly = true })
        </div>
        <div class="usr-label" style="width:@ViewBag.LabelCol2Width;">@Resources.CTS010.lblUsage</div>
        <div class="usr-object">
            @Html.CommonTextBox("BuildingUsageName", (string)@ViewBag.BuildingUsageName, new { style = "width:465px;", @readonly = true })
        </div>
    </div>
    <div class="usr-clear-style">&nbsp;</div>
</div>