@using SECOM_AJIS.Common.Helpers;
@{
    Layout = "";
    ViewBag.LabelCol1Width = "220px";
    ViewBag.LabelCol2Width = "120px";
    ViewBag.LabelCol3Width = "130px";
    ViewBag.ObjectCol1Width = "181px";
    ViewBag.ObjectCol2Width = "220px";
    ViewBag.ObjectCol12_SWidth = "369px";
    ViewBag.ObjectCol3Width = "110px";
    ViewBag.ObjectColMerge12Width = "280px";
    ViewBag.ObjectColMergeWidth = "720px";

    ViewBag.ObjectColCustNameWidth = "200px";

    ViewBag.SubTableWidth = "550px";
    ViewBag.SubLabelCol1Width = "120px";
}
<script type="text/javascript" src="@Url.Content("~/Scripts/Contract/CTS010/CTS010_06.js")"></script>
<div style="display:none;">
    @Html.Hidden("defContractDurationMonth", (string)@ViewBag.ContractDurationMonth);
    @Html.Hidden("defAutoRenewMonth", (string)@ViewBag.AutoRenewMonth);
    @Html.Hidden("defContractEndDate", (string)@ViewBag.ContractEndDate);
</div>
<div id="divContractDurationInfo" class="main-table">
    <div class="table-header">@Resources.CTS010.lblContactDurationInformation</div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelCol1Width;">&nbsp;</div>
        <div class="usr-object" style="width:@ViewBag.ObjectColMergeWidth;">
            @Html.CommonCheckButton("IrregulationContractDurationFlag", @Resources.CTS010.chkContractDuration, "1", ((string)@ViewBag.IrregulationContractDurationFlag == "1"))
        </div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelCol1Width;">@Resources.CTS010.lblContractDuration</div>
        <div class="usr-object" style="width:@ViewBag.ObjectColMerge12Width;">
            @Html.NumericTextBox("ContractDurationMonth", (string)@ViewBag.ContractDurationMonth, new { style = "width:" + @ViewBag.ObjectCol1Width + ";" })
        </div>
        <div class="usr-label" style="width:@ViewBag.LabelCol1Width;">@Resources.CTS010.lblAutoRenew</div>
        <div class="usr-object" style="width:@ViewBag.ObjectCol1Width;">
            @Html.NumericTextBox("AutoRenewMonth", (string)@ViewBag.AutoRenewMonth, new { style = "width:" + @ViewBag.ObjectCol1Width + ";" })
        </div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelCol1Width;">@Resources.CTS010.lblEndContractDate</div>
        <div class="usr-object">
            <div class="object-unit">
                @Html.CommonTextBox("ContractEndDate", (string)@ViewBag.ContractEndDate, new { style = "width:" + @ViewBag.ObjectCol1Width + ";" })
            </div>
            @Html.LabelDateFormat("ContractEndDate")
        </div>
    </div>
    <div class="usr-clear-style">&nbsp;</div>
</div>