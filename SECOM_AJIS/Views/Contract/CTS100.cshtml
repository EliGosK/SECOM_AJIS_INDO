@using SECOM_AJIS.Common.Helpers
@using SECOM_AJIS.Presentation.Contract.Helpers;
@using SECOM_AJIS.Presentation.Common.Helpers;
@using SECOM_AJIS.Common.Util.ConstantValue;
@{
    ViewBag.LabelWidth = "220px";
    ViewBag.RightLabelWidth = "220px";
    ViewBag.ObjectWidth = "160px";
    ViewBag.RightObjectWidth = "180px";
    ViewBag.ObjectColMergeWidth = "720px";
}

@section page_header{
    <script type="text/javascript" src="@Url.Content("~/Scripts/Base/AutoComplete.js")" ></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/Base/ComboBox.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/Base/DateTimePicker.js")"></script>
    @*<script type="text/javascript" src="@Url.Content("~/Scripts/Base/Master.js")"></script>*@
    <script type="text/javascript" src="@Url.Content("~/Scripts/Common/Dialog.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/Contract/CTS100.js")" ></script>
}

<div class="table-header">
    <form id="formCTS100" action='#' >

        <div id="divSpecifyContractCode" class="main-table" >
            <div class="table-header">
                <div class="usr-label">
                    @Resources.CTS100.lblTitleSpecifyContractCode
                </div>                                  
            </div>
            <div class="usr-row">
                <div class="usr-label" style="width:@ViewBag.LabelWidth;">
                        @Resources.CTS100.lblContractCode
                </div> 
                <div class="usr-object">
                        @Html.CommonTextBox("txtSpecifyContractCode", (string)@ViewBag.ContractCodeShort, new { style = "width:125px;", maxlength = CommonValue.C_MAXLENGTH_CONTRACT_CODE })
                        @Html.Hidden("ContractCode", (string)@ViewBag.ContractCodeShort)
                </div>
                <div class="usr-label" style="width:1px;">&nbsp;</div>  
                <div class="usr-object">
                        @Html.CommonButton("btnRetrieve", @Resources.CTS100.lblRetrieve, new { style = "width:100px;", type = "button" }) 
                </div>    
                <div class="usr-label" style="width:1px;">&nbsp;</div> 
                <div class="usr-object">
                        @Html.CommonButton("btnClear", @Resources.CTS100.lblClear, new { style = "width:100px;", type = "button" }) 
                </div>                                
            </div>
            <div class="usr-row"></div>
        </div>

        @Html.Partial("_ContractBasicInformation")

        <div id="divStopService" class="main-table" >
            <div class="table-header">
                    <div class="usr-label">
                        @Resources.CTS100.lblTitleStopService
                    </div>                                  
            </div>
            <div class="usr-row">
                <div class="usr-label" style="width:@ViewBag.LabelWidth;">
                        @Resources.CTS100.lblStopDate
                </div> 
                <div class="usr-object" style = "width:238px;">
                    <div class="object-unit">
                        @Html.CommonTextBox("dpStopDate", null, new { style = "width:100px;", maxlength = "15" })
                        @Html.Hidden("CurrentDate", (DateTime)@ViewBag.CurrentDate)
                    </div>
                    @Html.LabelDateFormat("dpStopDate")
                    &nbsp;@Html.RequireFiled()
                </div>    
                <div class="usr-label" style="width:216px;">
                        @Resources.CTS100.lblStopReason
                </div> 
                <div class="usr-object" style="width:230px;">
                        @Html.StopCancelReasonComboBox("ddlStopReason", new { style = "width:200px;", maxlength = "15" }) 
                        @Html.RequireFiled() 
                </div>                   
            </div>

            <div class="usr-row">
                <div class="usr-label" style="width:@ViewBag.LabelWidth;">
                        @Resources.CTS100.lblStopFee
                </div> 
                <div class="usr-object" style="width:214px;">
                    @Html.NumericTextBoxWithMultipleCurrency("txtStopFee", "0.00", SECOM_AJIS.Common.Util.ConstantValue.CurrencyUtil.C_CURRENCY_LOCAL, new { style =  "width:140px;" }, SECOM_AJIS.Presentation.Common.Helpers.TextBoxHelper.MULTIPLE_CURRENCY_TYPE.COMBOBOX, true)
                    @Html.Hidden("HasStopFee", (int)@ViewBag.HasStopFee)
                </div>                  
                <div class="usr-label" style="width:240px;">
                        @Resources.CTS100.lblOperationDate
                </div> 
                <div class="usr-object">
                    <div class="object-unit">
                        @Html.CommonTextBox("dpOperationDate", null, new { style = "width:100px;", maxlength = "15" })
                    </div> 
                    @Html.LabelDateFormat("dpOperationDate")
                    &nbsp;@Html.RequireFiled()
                </div> 
            </div>
            <div class="usr-row">
                <div class="usr-label" style="width:@ViewBag.LabelWidth;">
                        @Resources.CTS100.lblApprove1
                </div> 
                <div class="usr-object" style="width:208px;">
                        @Html.CommonTextBox("txtApproveNo1", null, new { style = "width:190px;", maxlength = "15" })
                        @Html.RequireFiled()
                </div>    
                <div class="usr-label" style="width:246px;">
                        @Resources.CTS100.lblApprove2
                </div> 
                <div class="usr-object">
                        @Html.CommonTextBox("txtApproveNo2", null, new { style = "width:150px;", maxlength = "15" })
                </div> 
            </div>
            <div class="usr-row"></div>
        </div>

        <div class="usr-row" style="height: 5px"></div>
    </form>
</div>    

