<!-- INCIDENT BY ROLE =========================================================================================================================== -->
<div id="Search_by_Role" class="main-table">
    <div class="table-header">
        @Resources.CTS310.sectionIncidentListByRole
    </div>
    <form id="CTS310_ByRole" action='#'>
