        <div class="usr-label" style="width:@ViewBag.LabelWidth;">
            @Resources.CTS310.cboIncidentStatus
        </div>
        <div class="usr-object">
            @*@Html.IncidentStatusComboBox("cboIncidentStatus", new { style = "width:164px;", maxlength = "10" }, "All")*@
            @Html.IncidentSearchStatusComboBox("cboIncidentStatus", new { style = "width:164px;" })
        </div>
    </div>
    <div class="usr-row">
        <div style="text-align: right;">
            @Html.CommonButton("btnSearchByRole", @Resources.CTS310.btnSearch, new { type = "button" })
            @Html.CommonButton("btnClearByRole", @Resources.CTS310.btnClear, new { type = "button" })
