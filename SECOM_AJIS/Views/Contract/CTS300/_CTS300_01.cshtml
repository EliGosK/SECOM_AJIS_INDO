@using SECOM_AJIS.Common.Helpers;
@using SECOM_AJIS.Common.Util.ConstantValue
@{
    Layout = "";

    ViewBag.LabelCol1Width = "220px";
    ViewBag.LabelCol2Width = "120px";
    ViewBag.LabelCol3Width = "130px";
    ViewBag.ObjectCol1Width = "130px";
    ViewBag.ObjectCol2Width = "220px";
    ViewBag.ObjectCol3Width = "110px";
    ViewBag.ObjectColMergeWidth = "720px";

    ViewBag.SubTableWidth = "550px";
    ViewBag.SubLabelCol1Width = "120px";
}

@*@{
<script type="text/javascript" src="@Url.Content("~/Scripts/Contract/CTS300/CTS300_01.js")"></script>
    }*@
<div id="dIncidentRelevantInfo" class="main-table" style="margin-top:5px;">
    <div class="table-header">@Resources.CTS300.lblIncidentRelevantInformation </div>
    
    <div class="usr-row" id="divSelectRelevant">
        <div class="usr-label" style="width:@ViewBag.LabelCol1Width;">@Resources.CTS300.lblIncidentRelevantType @Html.RequireFiled()</div>
        <div class="usr-object" style="margin-left:0px;">
           @Html.CommonRadioButton("rdoCustomer", (string)@Resources.CTS300.rdoCustomer, @IncidentRelevant.C_INCIDENT_RELEVANT_TYPE_CUSTOMER, false, "IncidentRelevantType") 
        </div> 
        <div class="usr-object" style="margin-left:10px;">
           @Html.CommonRadioButton("rdoSite", (string)@Resources.CTS300.rdoSite, @IncidentRelevant.C_INCIDENT_RELEVANT_TYPE_SITE, false, "IncidentRelevantType") 
        </div>
        <div class="usr-object" style="margin-left:10px;">
           @Html.CommonRadioButton("rdoContract", (string)@Resources.CTS300.rdoContract, @IncidentRelevant.C_INCIDENT_RELEVANT_TYPE_CONTRACT, false, "IncidentRelevantType") 
        </div>
        <div class="usr-object" style="margin-left:10px;">
           @Html.CommonRadioButton("rdoProject", (string)@Resources.CTS300.rdoProject, @IncidentRelevant.C_INCIDENT_RELEVANT_TYPE_PROJECT, false, "IncidentRelevantType") 
        </div>
    </div>
    <div class="usr-row" style="height:20px"></div>
    <div class="usr-row ">
        <div class="usr-label" style="width:@ViewBag.LabelCol1Width;" id="divLblCustomerCode">@Resources.CTS300.lblCustomerCode</div>
        <div class="usr-object" style="width:120px;">
            @Html.CommonTextBox("CustomerCode", null, new { style = "width:120px;", @maxlength = CommonValue.C_MAXLENGTH_CUSTOMER_CODE })
        </div>
        <div class="usr-object" style="margin-left:10px;">
            @Html.CommonButton("btnRetrive_Customer", (string)@Resources.CTS300.btnRetrieve, new { style = "width:80px;", @type = "button" })
            @Html.CommonButton("btnSearch_Customer", (string)@Resources.CTS300.btnSearch, new { style = "width:80px;", @type = "button" })
        </div>
        <div class="usr-object" style="margin-left:10px;" id="divCustRelate1">
           @Html.CommonRadioButton("rdoRelatedCustomer", (string)@Resources.CTS300.rdoRelatedCustomer,"1" ,false ,"CustomerRelateType") 
        </div>
        <div class="usr-object" style="margin-left:10px;" id="divCustRelate2">
           @Html.CommonRadioButton("rdoRelatedAllSite", (string)@Resources.CTS300.rdoRelatedAllSite, "2", false, "CustomerRelateType")
        </div> 

    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelCol1Width;" id="divLblSiteCode">@Resources.CTS300.lblSiteCode</div>
        <div class="usr-object" style="width:120px;">
            @Html.CommonTextBox("SiteCode", null, new { style = "width:120px;", @maxlength = CommonValue.C_MAXLENGTH_SITE_CODE })
        </div>
        <div class="usr-object" style="margin-left:10px;">
            @Html.CommonButton("btnRetrive_Site", (string)@Resources.CTS300.btnRetrieve, new { style = "width:80px;", @type = "button" })
            @Html.CommonButton("btnSearch_Site", (string)@Resources.CTS300.btnSearch, new { style = "width:80px;", @type = "button" })
        </div>
        <div class="usr-object" style="margin-left:10px;" id="divSiteRelate1">
           @Html.CommonRadioButton("rdoRelatedSite", (string)@Resources.CTS300.rdoRelatedSite, "1", false, "SiteRelateType") 
        </div>
        <div class="usr-object" style="margin-left:10px;" id="divSiteRelate2">
           @Html.CommonRadioButton("rdoRelatedAllContract", (string)@Resources.CTS300.rdoRelatedAllContract, "2", false, "SiteRelateType")
        </div> 
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelCol1Width;" id="divLblUserCode_ContractCode">@Resources.CTS300.lblUserCode_ContractCode</div>
        <div class="usr-object" style="width:120px;">
            @Html.CommonTextBox("UserCode_ContractCode", null, new { style = "width:120px;", @maxlength = CommonValue.C_MAXLENGTH_CONTRACT_CODE })
        </div>
        <div class="usr-object" style="margin-left:10px;">
            @Html.CommonButton("btnRetrive_Contract", (string)@Resources.CTS300.btnRetrieve, new { style = "width:80px;", @type = "button" })
            @Html.CommonButton("btnSearch_Contract", (string)@Resources.CTS300.btnSearch, new { style = "width:80px;", @type = "button" })
        </div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelCol1Width;" id="divLblProjectCode">@Resources.CTS300.lblProjectCode</div>
        <div class="usr-object" style="width:120px;">
            @Html.CommonTextBox("ProjectCode", null, new { style = "width:120px;", @maxlength = "8" })
        </div>
        <div class="usr-object" style="margin-left:10px;">
            @Html.CommonButton("btnRetrive_Project", (string)@Resources.CTS300.btnRetrieve, new { style = "width:80px;", @type = "button" })
            @Html.CommonButton("btnSearch_Project", (string)@Resources.CTS300.btnSearch, new { style = "width:80px;", @type = "button" })
        </div>
    </div>
    <div class="usr-row usr-row-space" id="divContractView">
        <div class="usr-label" style="width:@ViewBag.LabelCol1Width;">&nbsp;</div>
        <div style="float:left;">
            <div id="CTS300_gridContractTarget" style="width:@ViewBag.ObjectColMergeWidth;"></div>
        </div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelCol1Width;">&nbsp;</div>
        <div style="text-align: right; float: left; width: 720px;">
            @Html.CommonButton("btnClear_Contract", (string)@Resources.CTS300.btnClear, new { style = "width:80px;", @type = "button" })
        </div>
    </div>
    <div class="usr-clear-style">&nbsp;</div>
</div>