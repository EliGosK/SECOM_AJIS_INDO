    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelCol1Width;">@Resources.CTS120.lblContractTargetAddressLOC</div>
        <div class="usr-object" style="margin-right:5px;">
            @Html.CommonTextBox("ContractTargetAddressLC", null, new { style = "width:700px;", @readonly = true })
        </div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelCol1Width;">&nbsp</div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelCol1Width;">@Resources.CTS120.lblSiteNameLOC</div>
        <div class="usr-object" style="margin-right:5px;">
            @Html.CommonTextBox("SiteNameLC", null, new { style = "width:700px;", @readonly = true })
        </div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelCol1Width;">@Resources.CTS120.lblSiteAddressLOC</div>
        <div class="usr-object" style="margin-right:5px;">
            @Html.CommonTextBox("SiteAddressLC", null, new { style = "width:700px;", @readonly = true })
        </div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelCol1Width;">&nbsp</div>
