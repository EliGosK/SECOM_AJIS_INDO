    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelCol1Width;">@Resources.CTS120.lblOperationOffice</div>
        <div class="usr-object" style="margin-right:5px;">
            @Html.CommonTextBox("OperationOffice", null, new { @readonly = true })
        </div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelCol1Width;">&nbsp</div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelCol1Width;">@Resources.CTS120.lblCancelDate</div>
        <div class="usr-object" style="margin-right:5px;">
            @Html.CommonTextBox("CancelDate", null, new { @readonly = true, style = "width:135px;" })
        </div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelCol1Width;">@Resources.CTS120.lblCancelReason</div>
        <div class="usr-object" style="margin-right:5px;">
