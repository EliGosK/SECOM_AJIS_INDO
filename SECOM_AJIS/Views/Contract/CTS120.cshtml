            @Html.CommonTextBox("SiteAddressEN", null, new { style = "width:700px;", @readonly = true })
        </div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelCol1Width;">&nbsp</div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelCol1Width;">@Resources.CTS120.lblContractTargetNameLOC</div>
        <div class="usr-object" style="margin-right:5px;">
            @Html.CommonTextBox("ContractTargetNameLC", null, new { style = "width:700px;", @readonly = true })
