<div id="divCompleteCancelContract" class="main-table" style="margin-top:5px;">
    <div class="table-header">@Resources.CTS120.lblCompleteCancelContract</div>
    <div class="usr-row usr-row-space">
        <div class="usr-label" style="width:@ViewBag.LabelCol1Width;">&nbsp;</div>
