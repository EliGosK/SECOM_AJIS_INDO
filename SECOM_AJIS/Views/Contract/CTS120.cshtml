        <div class="usr-object" style="margin-right:5px;">
            @Html.NumericTextBoxWithMultipleCurrency("MonthlyContractFee", null, SECOM_AJIS.Common.Util.ConstantValue.CurrencyUtil.C_CURRENCY_LOCAL, new { @readonly = true, style = "width:135px;" })
