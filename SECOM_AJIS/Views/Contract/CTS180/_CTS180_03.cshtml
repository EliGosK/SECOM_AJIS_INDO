@using SECOM_AJIS.Common.Helpers
@using SECOM_AJIS.Presentation.Contract.Helpers;
@using SECOM_AJIS.Presentation.Common.Helpers;
@{
    ViewBag.LabelWidth = "220px";
    ViewBag.RightLabelWidth = "355px";
    ViewBag.ObjectWidth = "180px";
    ViewBag.ObjectComboWidth = "184px";
    ViewBag.RightObjectWidth = "180px";
    ViewBag.ObjectFeeWidth = "145px";
    ViewBag.ObjectColMergeWidth = "720px";
}

<script type="text/javascript" src="@Url.Content("~/Scripts/Contract/CTS180/CTS180_03.js")" ></script>

<div id="divChangeMemo" class="main-table" style="display:none">    
    <div class="table-header">
        <div class="usr-label">
            @Resources.CTS180.lblTitleChangeMemoChangeNotice
        </div>                                  
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelWidth;">
            @Resources.CTS180.lblContractCode
        </div>
        <div class="usr-object" style="width:@ViewBag.ObjectWidth;">
            @Html.CommonTextBox("CM_ContractCodeShort", null, new { style = "width:" + @ViewBag.ObjectWidth + ";", @readonly = "readonly" })
        </div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelWidth;">
            @Resources.CTS180.lblContractTargetName
        </div>
        <div class="usr-object" style="width:@ViewBag.ObjectColMergeWidth;">
            @Html.CommonTextBox("CM_ContractTargetName", null, new { style = "width:" + @ViewBag.ObjectColMergeWidth + ";", maxlength = "200", @readonly = "readonly" })
        </div>                   
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelWidth;">
            @Resources.CTS180.lblRealCustomerName
        </div>
        <div class="usr-object" style="width:@ViewBag.ObjectColMergeWidth;">
            @Html.CommonTextBox("CM_RealCustomerName", null, new { style = "width:" + @ViewBag.ObjectColMergeWidth + ";", maxlength = "200" })
        </div>                    
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelWidth;">
            @Resources.CTS180.lblSiteNameEN
        </div> 
        <div class="usr-object" style="width:@ViewBag.ObjectColMergeWidth;">
            @Html.CommonTextBox("CM_SiteNameEN", null, new { style = "width:" + @ViewBag.ObjectColMergeWidth + ";", maxlength = "200" })
        </div>            
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelWidth;">
            @Resources.CTS180.lblSiteNameLC
        </div> 
        <div class="usr-object" style="width:@ViewBag.ObjectColMergeWidth;">
            @Html.CommonTextBox("CM_SiteNameLC", null, new { style = "width:" + @ViewBag.ObjectColMergeWidth + ";", maxlength = "200" })
        </div>            
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelWidth;">
            @Resources.CTS180.lblSiteAddress
        </div> 
        <div class="usr-object" style="width:@ViewBag.ObjectColMergeWidth;">
            @Html.CommonTextBox("CM_SiteAddress", null, new { style = "width:" + @ViewBag.ObjectColMergeWidth + ";", maxlength = "255" })
        </div>            
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelWidth;">
            @Resources.CTS180.lblChangeDate
        </div>
        <div class="usr-object">
            <div class="object-unit">
                @Html.CommonTextBox("CM_ChangeDate", null, new { style = "width:100px;", maxlength = "15" })
            </div>
            @Html.LabelDateFormat("CM_ChangeDate")
        </div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelWidth;">
            @Resources.CTS180.lblOldContractFee
        </div>
        <div class="usr-object">
            @Html.NumericTextBoxWithMultipleCurrency("CM_OldContractFee", null, null, new { style = "width:140px;", @readonly = "readonly" })
        </div>
        <div class="usr-label" style="width:333px">
            @Resources.CTS180.lblNewContractFee
        </div>
        <div class="usr-object">
            @Html.NumericTextBoxWithMultipleCurrency("CM_NewContractFee", null, null, new { style = "width:140px;", @readonly = "readonly" })
        </div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelWidth;">
            @Resources.CTS180.lblChangeContent
        </div>
        <div class="usr-object" style="width:@ViewBag.ObjectColMergeWidth;">
            @Html.CommonTextArea("CM_ChangeContent", null, new { style = "width:" + @ViewBag.ObjectColMergeWidth + "; height:50px; overflow:auto", maxlength = "1600" })
        </div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelWidth;">
            @Resources.CTS180.lblCustomerSignatureName
        </div>
        <div class="usr-object" style = "width:375px;">
            @Html.CommonTextBox("CM_CustomerSignatureName", null, new { style = "width:375px;", maxlength = "150" })
        </div>
    </div>
    <div class="usr-row" style="height:5px"></div>

    <div id="divSecomSignatureChangeMemo" class="main-table" >
        <div class="table-header">
            <div class="usr-label">
                @Resources.CTS180.lblTitleSecomSignature
            </div> 
        </div>
        <div>
            <div class="usr-row">
                <div class="usr-label"  style="width: 150px;">
                        @Resources.CTS180.lblUseSignaturePicture
                </div>
                <div class="usr-object">
                        @Html.CommonCheckButton("CM_UseSignaturePicture", null, null, false)
                </div>    
                <div class="usr-label"  style="width: 235px;">
                        @Resources.CTS180.lblEmployeeName
                </div> 
                <div class="usr-object" style="width:@ViewBag.ObjectWidth;">
                        @Html.CommonTextBox("CM_EmployeeName", null, new { style = "width:" + @ViewBag.ObjectWidth + ";", maxlength = "100" })
                </div>  
                <div class="usr-label" style="width: 150px;">
                        @Resources.CTS180.lblEmployeePosition
                </div> 
                <div class="usr-object" style="width:@ViewBag.ObjectWidth;">
                        @Html.CommonTextBox("CM_EmployeePosition", null, new { style = "width:" + @ViewBag.ObjectWidth + ";", maxlength = "100" })
                </div>                   
            </div>
            <div class="usr-row"></div>
        </div>
    </div>

    <div class="usr-row"></div>
</div>

