                                <td>
                                    @Html.NumericTextBoxWithMultipleCurrency("ProductPriceARFee", null, SECOM_AJIS.Common.Util.ConstantValue.CurrencyUtil.C_CURRENCY_LOCAL, new { style = "width:140px;" })
                                </td>
                                <td>
                                    <div class="usr-label" style="width: 110px; text-align:left;">
                                        <span id="spResProductPrice1"></span>
                                    </div>
                                    <div class="usr-object" style="width:75px;">
                                        @Html.CommonTextBox("ProductPriceOCDCRate", "", new { style = "text-align:right; width:70px;", @readonly = true })
                                    </div>
                                    <div class="usr-label" style="width: 20px;">%</div>
                                </td>
                            </tr>
                            <tr>
                                <td>@Resources.CTS350.lblInstallFee2</td>
                                <td>
                                    @Html.NumericTextBoxWithMultipleCurrency("InstallFeeQuotationFee", null, SECOM_AJIS.Common.Util.ConstantValue.CurrencyUtil.C_CURRENCY_LOCAL, new { style = "width:140px;" })
                                </td>
                                <td>
                                    @Html.NumericTextBoxWithMultipleCurrency("InstallFeeARFee", null, SECOM_AJIS.Common.Util.ConstantValue.CurrencyUtil.C_CURRENCY_LOCAL, new { style = "width:140px;" })
                                </td>
                                <td>
                                    <div class="usr-label" style="width: 110px; text-align:left;">
                                        <span id="spResInstallFee2"></span>
                                    </div>
                                    <div class="usr-object" style="width:75px;">
                                        @Html.CommonTextBox("InstallFeeOCDCRate", "", new { style = "text-align:right; width:70px;", @readonly = true })
                                    </div>
                                    <div class="usr-label" style="width: 20px;">%</div>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelCol1Width;">&nbsp;</div>
    </div>

