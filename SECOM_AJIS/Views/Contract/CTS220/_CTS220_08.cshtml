@using SECOM_AJIS.Common.Helpers;
@using SECOM_AJIS.Presentation.Common.Helpers

@{
    Layout = "";
    ViewBag.Title = "CTS220";
    ViewBag.LabelWidth = "250px";
    ViewBag.RightLabelWidth = "221px";
    ViewBag.ObjectWidth = "120px";
    ViewBag.ObjectWidthUnit = "180px";
    ViewBag.RightObjectWidth = "180px";
    ViewBag.isViewMode = true;
    ViewBag.ContractTargetCustomerImportant = false;
    ViewBag.SubTableWidth = "550px";
    ViewBag.SubLabelCol1Width = "120px";
    
}

<script language="javascript" runat="server"> 
    var objCTS220_08 = {         
                            QuotationTargetCode : "@ViewBag.QuotationTargetCode",
                            QuotationAlphabet : "@ViewBag.QuotationAlphabet"
                        } 
</script>

<script type="text/javascript" src="@Url.Content("~/Scripts/Contract/CTS220/CTS220_08.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/Quotation/Dialog.js")"></script>

<div id="divQuotationSection" class="main-table">
    <div class="usr-row">
        <div class="table-header" style="width: 400px;">
            @Resources.CTS220.lblQuotationInformation
        </div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelWidth;">
            @Resources.CTS220.lblQuotationCode
        </div>
        <div id="divQuotationTargetCode" class="usr-object" style="width: 220px">
            @Html.CommonLink("QuotationTargetCode", "", null)
        </div>  
        <div class="usr-label" style="width:211px;">
            @Resources.CTS220.lblPlanCode
        </div>
        <div class="usr-object">
            @Html.CommonTextBox("PlanCode", null, new { style = "width:" + @ViewBag.ObjectWidth + ";", maxlength = "20" })                
        </div>             
    </div>

    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelWidth;">
            @Resources.CTS220.lblPlanApprovingDate
        </div>
        <div class="usr-object" style="width: 220px;">
            @Html.CommonTextBox("PlanApproveDate", null, new { style = "width:" + @ViewBag.ObjectWidth + ";", @readonly = true })
        </div>  
        <div class="usr-label" style="width:211px;">
            @Resources.CTS220.lblPlanApprover
        </div>
        <div class="usr-object" style="width: 70px">
            @Html.CommonTextBox("PlanApproverEmpNo", (string)@ViewBag.PlanApproverEmpNo, new { style = "width:70px;", @readonly = true })                
        </div> 
        <div class="usr-label" style="width:1px;">&nbsp;</div>
        <div class="usr-object">
            @Html.CommonTextBox("PlanApproverEmpName", (string)@ViewBag.PlanApproverEmpName, new { style = "width:189px;", @readonly = true })                
        </div>             
    </div>

    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelWidth;">
            @Resources.CTS220.lblNormalContractFee
        </div>
        <div class="usr-object" style="width:220px;">
            @Html.NumericTextBoxWithMultipleCurrency("NormalContractFee", null, null, new { style = "width:140px;" })
        </div>  
        <div class="usr-label" style="width:211px;">
            @Resources.CTS220.lblOutsourcingFee
        </div>
        <div class="usr-object" style="width:220px;">
            @Html.NumericTextBoxWithMultipleCurrency("MaintenanceFee1", null, null, new { style = "width:140px;" })
        </div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelWidth;">
            @Resources.CTS220.lblAdditionalContractFee1
        </div>
        <div class="usr-object" style="width:220px;">
            @Html.NumericTextBoxWithMultipleCurrency("AdditionalFee1", null, null, new { style = "width:140px;" })
        </div>

        <div class="usr-label" style="width:211px;">
            @Resources.CTS220.lblAdditionalContractFee2
        </div>
        <div class="usr-object" style="width:220px;">
            @Html.NumericTextBoxWithMultipleCurrency("AdditionalFee2", null, null, new { style = "width:140px;" })
        </div>
           
    </div>

     <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelWidth;">
            @Resources.CTS220.lblAdditionalContractFee3
        </div>
        <div class="usr-object" style="width:220px;">
            @Html.NumericTextBoxWithMultipleCurrency("AdditionalFee3", null, null, new { style = "width:140px;" })
        </div>
   
    </div>

    <div class="usr-row">&nbsp;</div>
</div>