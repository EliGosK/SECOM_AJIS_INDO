@using SECOM_AJIS.Common.Helpers

@{
    ViewBag.LabelWidth = "220px";
    ViewBag.RightLabelWidth = "220px";
    ViewBag.ObjectWidth = "125px";
    ViewBag.RightObjectWidth = "180px";
    ViewBag.ObjectColMergeWidth = "720px";    
}

<div id="divSaleContractBasicInfo" class="main-table">    
    <div class="table-header">
        @Resources._SaleContractBasicInformation.lblHeaderName                                 
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelWidth;">
                @Resources._SaleContractBasicInformation.lblContractCode
        </div>
        <div class="usr-object" style="width:@ViewBag.ObjectWidth">
                @Html.CommonTextBox("ContractCodeShort", (string)@ViewBag.ContractCodeShort, new { style = "width:" + @ViewBag.ObjectWidth + ";", @readonly = "readonly" })
        </div>
    </div>
    <div class="usr-row">
            <div class="usr-label" style="width:@ViewBag.LabelWidth;">
                @Resources._SaleContractBasicInformation.lblCustomerCodePurchaser
            </div>
            <div class="usr-object" style="width:@ViewBag.ObjectWidth">
                @Html.CommonTextBox("PurchaserCustCodeShort", (string)@ViewBag.PurchaserCustCodeShort, new { style = "width:" + @ViewBag.ObjectWidth + ";", @readonly = "readonly" })
            </div>
            <div class="usr-label" style="width:@ViewBag.RightLabelWidth;">
                @Resources._SaleContractBasicInformation.lblCustomerCodeReal
