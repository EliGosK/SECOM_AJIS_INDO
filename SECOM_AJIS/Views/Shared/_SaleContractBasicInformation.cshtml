            <div class="usr-object" style="width:@ViewBag.ObjectWidth">
                @Html.CommonTextBox("RealCustomerCustCodeShort", (string)@ViewBag.RealCustomerCustCodeShort, new { style = "width:" + @ViewBag.ObjectWidth + ";", @readonly = "readonly" })
