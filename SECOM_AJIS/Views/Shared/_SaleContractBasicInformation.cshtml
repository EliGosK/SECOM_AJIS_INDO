            <div class="usr-label" style="width:@ViewBag.LabelWidth;">&nbsp;</div>     
            <div class="usr-object">
                @Html.CommonCheckButton("PurchaserCustomerImportant", @Resources._SaleContractBasicInformation.lblPurchaserImportantFlag, "", (bool?)@ViewBag.PurchaserCustomerImportant, new { disabled = "disabled" })
            </div>
    </div>
    <div class="usr-row">
            <div class="usr-label" style="width:@ViewBag.LabelWidth;">
                @Resources._SaleContractBasicInformation.lblPurchaserName
