                            <div class="usr-object" style="width:200px" ><div class="label-view">@Html.CommonCheckButton("chkFireMonitoring", @Resources.CMS120.chkFireMonitoring, null, (bool)@ViewBag.chkFireMonitoring, new { disabled = "disabled" })</div></div>
