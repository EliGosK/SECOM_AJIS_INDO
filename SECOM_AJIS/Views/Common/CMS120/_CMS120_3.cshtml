                        </div>
              
                        <div class="usr-clear-style">
                            &nbsp;</div>
                    </div>
                </div>
            </div>

        }

         @if ((string)ViewBag.ProductTypeCode == ProductType.C_PROD_TYPE_ONLINE || (string)ViewBag.ProductTypeCode == ProductType.C_PROD_TYPE_AL || (string)ViewBag.ProductTypeCode == ProductType.C_PROD_TYPE_RENTAL_SALE || (bool)ViewBag.isShowAll)
