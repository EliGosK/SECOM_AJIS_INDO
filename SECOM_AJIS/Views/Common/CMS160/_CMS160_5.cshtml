@using SECOM_AJIS.DataEntity.Common;
@using SECOM_AJIS.Common.Helpers;
@using SECOM_AJIS.Presentation.Master.Helpers;
@using SECOM_AJIS.Presentation.Common.Helpers;
@using SECOM_AJIS.Common.Util.ConstantValue;


<div class="main-table">
    <div class="table-header">@Resources.CMS160.lblSection_Change_installation_after_start_operation </div>

    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.lbWidth;">
            @Resources.CMS160.lblInstallation_type
        </div>
        <div class="usr-object" style="width:@ViewBag.headText; background-color:@ViewBag.txtBackgroundColor;">
            @Html.CommonTextBox("txtInstallation_type", (string)@ViewBag.txtInstallation_type, new { isViewMode = @ViewBag.isViewMode })
        </div>
        <div class="usr-label" style="width:@ViewBag.lbWidth;">
            @Resources.CMS160.lblInstallation_slip_no  
         </div>
        <div class="usr-object" style="width:@ViewBag.shortText; background-color:@ViewBag.txtBackgroundColor;">
            @Html.CommonLink("lnkInstallation_slip_no_Change", (string)@ViewBag.lnkInstallation_slip_no_Change)&nbsp;
        </div>
    </div>

     <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.lbWidth;">
            @Resources.CMS160.lblComplete_installation_date
        </div>
        <div class="usr-object" style="width:@ViewBag.shortText; background-color:@ViewBag.txtBackgroundColor;">
            @Html.CommonTextBox("txtComplete_installation_date_Change", (string)@ViewBag.txtComplete_installation_date_Change, new { isViewMode = @ViewBag.isViewMode })
        </div>
    </div>

    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.lbWidth;">
            @Resources.CMS160.lblNormal_installation_fee
        </div>
        <div class="usr-object" style="width:@ViewBag.headText; margin-right:0px; background-color:@ViewBag.txtBackgroundColor;">
            <div style="float:left;">@Html.CommonTextBox("txtNormal_installation_fee", (string)@ViewBag.txtNormal_installation_fee, new { isViewMode = @ViewBag.isViewMode })</div>
            @*@Html.LabelCurrencyUnit("lblCurency")*@
        </div>
        <div class="usr-label" style="width:@ViewBag.lbWidth;">
            @Resources.CMS160.lblOrder_installation_fee
         </div>
        <div class="usr-object" style="width:auto; margin-right:0px; background-color:@ViewBag.txtBackgroundColor;">
            <div style="float:left;">@Html.CommonTextBox("txtOrder_installation_fee", (string)@ViewBag.txtOrder_installation_fee, new { isViewMode = @ViewBag.isViewMode })</div>
             @*@Html.LabelCurrencyUnit("lblCurency")*@
        </div>
    </div>

    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.lbWidth;">
            @Resources.CMS160.lblSECOM_payment
        </div>
        <div class="usr-object" style="width:@ViewBag.headText; margin-right:0px; background-color:@ViewBag.txtBackgroundColor;">
            <div style="float:left;">@Html.CommonTextBox("txtSECOM_payment", (string)@ViewBag.txtSECOM_payment, new { isViewMode = @ViewBag.isViewMode })</div>
            @*@Html.LabelCurrencyUnit("lblCurency")*@
        </div>
        <div class="usr-label" style="width:@ViewBag.lbWidth;">
            @Resources.CMS160.lblSECOM_revenue
         </div>
        <div class="usr-object" style="width:auto; margin-right:0px; background-color:@ViewBag.txtBackgroundColor;">
            <div style="float:left;">@Html.CommonTextBox("txtSECOM_revenue", (string)@ViewBag.txtSECOM_revenue, new { isViewMode = @ViewBag.isViewMode })</div>
            @*@Html.LabelCurrencyUnit("lblCurency")*@
        </div>
    </div>

    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.lbWidth;">
            @Resources.CMS160.lblApprove_no1
        </div>
        <div class="usr-object" style="width:@ViewBag.headText; background-color:@ViewBag.txtBackgroundColor;">
            @Html.CommonTextBox("txtApprove_no1_Change", (string)@ViewBag.txtApprove_no1_Change, new { isViewMode = @ViewBag.isViewMode })
        </div>
        <div class="usr-label" style="width:@ViewBag.lbWidth;">
            @Resources.CMS160.lblNegotiation_staff
         </div>
        <div class="usr-object" style="width:auto; background-color:@ViewBag.txtBackgroundColor;">
            @Html.CommonTextBox("txtNegotiation_staff", (string)@ViewBag.txtNegotiation_staff, new { isViewMode = @ViewBag.isViewMode })
        </div>
    </div>

    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.lbWidth;">
            @Resources.CMS160.lblApprove_no2
        </div>
        <div class="usr-object" style="width:@ViewBag.headText; background-color:@ViewBag.txtBackgroundColor;">
            @Html.CommonTextBox("txtApprove_no2_Change", (string)@ViewBag.txtApprove_no2_Change, new { isViewMode = @ViewBag.isViewMode })
        </div>
        <div class="usr-label" style="width:@ViewBag.lbWidth;">
            @Resources.CMS160.lblComplete_registrant
         </div>
        <div class="usr-object" style="width:auto; background-color:@ViewBag.txtBackgroundColor;">
            @Html.CommonTextBox("txtComplete_registrant", (string)@ViewBag.txtComplete_registrant, new { isViewMode = @ViewBag.isViewMode })
        </div>
    </div>

    <div class="usr-clear-style"> &nbsp;</div>

    <div class="usr-row">
        <div class="usr-object" style="height: 100%;">
            <div class="fieldset-table" style="width: 945px; height: 100%; margin-left: 5px ; margin-top:10px">
                <div class="fieldset-header">
                    <span>@Resources.CMS160.lblSubcontractor</span>
                </div>

                @*[GRID] SUBCONTRACTOR *@
                <div>
                    <div id="mygrid_subcontractor_ChangeInstall" style="width: 99%; margin-left: 4px;">
                    </div>
                </div>

                <div class="usr-clear-style"> &nbsp;</div>
            </div>
        </div>
    </div>


     <div class="usr-clear-style">&nbsp;</div>
</div>


