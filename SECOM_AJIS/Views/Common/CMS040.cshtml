@using SECOM_AJIS.DataEntity.Common;
@using SECOM_AJIS.Common.Helpers;
@using SECOM_AJIS.Presentation.Master.Helpers;
@section page_header{
    <script src="../../Scripts/jquery.maskedinput-1.3.js" type="text/javascript"></script>
    <script src="../../Scripts/Base/DateTimePicker.js" type="text/javascript"></script>
    <script src="../../Scripts/Base/AutoComplete.js" type="text/javascript"></script>
  
    <script src="../../Scripts/Common/CMS040.js" type="text/javascript"></script>
    <!-- <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/css/Common/cms040.css")" media="all"> -->
    @*For dhtmlxgrid*@
    <link rel="STYLESHEET" type="text/css" href="@Url.Content("~/Content/js/dhtmlxgrid/dhtmlxgrid.css")">
    <link rel="STYLESHEET" type="text/css" href="@Url.Content("~/Content/js/dhtmlxgrid/dhtmlxgrid_skins.css")">
    <script  language="javascript" type="text/javascript" 
    src="@Url.Content("~/Content/js/dhtmlxgrid/dhtmlxcommon.js")">
    </script>
    <script  language="javascript" type="text/javascript" 
    src="@Url.Content("~/Content/js/dhtmlxgrid/dhtmlxgrid.js")">
    </script>
    <script  language="javascript" type="text/javascript" 
    src="@Url.Content("~/Content/js/dhtmlxgrid/ext/dhtmlxgrid_data.js")">
    </script>
    <script  language="javascript" type="text/javascript" 
    src="@Url.Content("~/Content/js/dhtmlxgrid/ext/dhtmlxgrid_pgn.js")">
    </script>
    <script  language="javascript" type="text/javascript" 
    src="@Url.Content("~/Content/js/dhtmlxgrid/dhtmlxgridcell.js")">
    </script>

    <script type="text/javascript">
        var CMS040_Object = { "SystemStatus": "@ViewBag.SystemStatusName" };
    </script>
}
@{
    ViewBag.LabelWidth_S1_1 = "400px";
    ViewBag.ObjectWidth_S1_1 = "200px";
    ViewBag.ObjectWidth_S1_2 = "300px";

    ViewBag.LabelWidth_S2_1 = "200px";
    ViewBag.ObjectWidth_S2_1 = "120px";
    ViewBag.ObjectWidth_S2_2 = "300px";
}
<!--  HTML -->
<!--  ====== section 1======  -->
<div class="main-table">
    <div class="table-header">
        @Resources.CMS040.lblCurrentSetting
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelWidth_S1_1;">
            @Resources.CMS040.lblSystemStatus
        </div>
        <div class="usr-object"  style="width:@ViewBag.ObjectWidth_S1_1;">
             @Html.CommonTextBox("SystemStatus", (string)@ViewBag.SystemStatus, new { style = "width:180px;", @readonly = "readonly" })
        </div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelWidth_S1_1;">
            @Resources.CMS040.lblNextSuspendServiceTime
        </div>
        <div class="usr-object"  style="width:@ViewBag.ObjectWidth_S1_1;">
            @Html.CommonTextBox("NextSuspendServiceTime", (string)@ViewBag.NextSuspendServiceDateTime, new { style = "width:180px;", @readonly = "readonly" })
        </div>
        <div class="usr-object"  style="width:@ViewBag.ObjectWidth_S1_2;">
            @Html.CommonButton("btnSuspendServiceNow", @Resources.CMS040.btnSuspendNow, new { type = "button", style = "width:200px" })
        </div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelWidth_S1_1;">
            @Resources.CMS040.lblNextResumeServiceTime
        </div>
        <div class="usr-object"  style="width:@ViewBag.ObjectWidth_S1_1;">
            @Html.CommonTextBox("NextResumeServiceTime", (string)@ViewBag.NextResumeServiceDateTime, new { style = "width:180px;", @readonly = "readonly" })
        </div>
        <div class="usr-object"  style="width:@ViewBag.ObjectWidth_S1_2;">
            @Html.CommonButton("btnResumeServiceNow", @Resources.CMS040.btnResumeNow, new { type = "button", style = "width:200px" })
        </div>
    </div>
    <div class="usr-clear-style" style="height: 0%">
        &nbsp;</div>
</div>

<div class="table-line">    
</div>


<!--  ====== section 2 ======  -->

<div class="main-table">
    <div class="table-header">
        @Resources.CMS040.lblChangeSchedule
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelWidth_S2_1;">
            @Resources.CMS040.lblSuspendServiceTime
        </div>
        <div class="usr-object"  style="width:@ViewBag.ObjectWidth_S2_1;">
            @Html.TimeComboBox("SuspendServiceTime", new { style = "width:100px", selected = @ViewBag.NextSuspendServiceTime })
        </div>
        <div class="usr-object"  style="width:@ViewBag.ObjectWidth_S2_2;">
            @Html.CommonButton("btnUpdateSuspendTime", @Resources.CMS040.btnUpdate, new { type = "button", style = "width:100px" })
        </div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelWidth_S2_1;">
            @Resources.CMS040.lblResumeServiceTime
        </div>
        <div class="usr-object"  style="width:@ViewBag.ObjectWidth_S2_1;">
             @Html.TimeComboBox("ResumeServiceTime", new { style = "width:100px", selected = @ViewBag.NextResumeServiceTime })
        </div>
        <div class="usr-object"  style="width:@ViewBag.ObjectWidth_S2_2;">
            @Html.CommonButton("btnUpdateResumeTime", @Resources.CMS040.btnUpdate, new { type = "button", style = "width:100px" })
        </div>
    </div>
    <div class="usr-clear-style" style="height: 0%">
        &nbsp;</div>
</div>
