@using SECOM_AJIS.DataEntity.Common;
@using SECOM_AJIS.Common.Helpers;
@using SECOM_AJIS.Presentation.Master.Helpers;
@using SECOM_AJIS.Presentation.Common.Helpers;
@using SECOM_AJIS.Common.Util.ConstantValue;


<div class="main-table">
<div class="table-header">@Resources.CMS220.lblSite</div>

    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.lbWidth;">
            @Resources.CMS220.lblSiteCode
        </div>
        <div class="usr-object" style="width:@ViewBag.longText; background-color:@ViewBag.txtBackgroundColor;">
            @Html.CommonTextBox("txtSiteCode", (string)@ViewBag.txtSiteCode, new { isViewMode = @ViewBag.isViewMode })
        </div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.lbWidth;">
            @Resources.CMS220.lblName_English
        </div>
        <div class="usr-object" style="width:@ViewBag.longText; background-color:@ViewBag.txtBackgroundColor;">
            @Html.CommonTextBox("txtSiteName_English", (string)@ViewBag.txtSiteName_English, new { isViewMode = @ViewBag.isViewMode })
        </div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.lbWidth;">
            @Resources.CMS220.lblAddress_English
        </div>
        <div class="usr-object" style="width:@ViewBag.longText; background-color:@ViewBag.txtBackgroundColor;">
            @Html.CommonTextBox("txtSiteAddress_English", (string)@ViewBag.txtSiteAddress_English, new { isViewMode = @ViewBag.isViewMode })
        </div>
    </div>

    <!---===============================================================================--->
    <div class="usr-row" style="height:20px">&nbsp;</div>
    <!---===============================================================================--->

    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.lbWidth;">
            @Resources.CMS220.lblName_Local
        </div>
        <div class="usr-object" style="width:@ViewBag.longText; background-color:@ViewBag.txtBackgroundColor;">
            @Html.CommonTextBox("txtSiteName_Local", (string)@ViewBag.txtSiteName_Local, new { isViewMode = @ViewBag.isViewMode })
        </div>
    </div>

    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.lbWidth;">
            @Resources.CMS220.lblAddress_Local
        </div>
        <div class="usr-object" style="width:@ViewBag.longText; background-color:@ViewBag.txtBackgroundColor;">
            @Html.CommonTextBox("txtSiteAddress_Local", (string)@ViewBag.txtSiteAddress_Local, new { isViewMode = @ViewBag.isViewMode })
        </div>
    </div>

     <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.lbWidth;">
            @Resources.CMS220.lblTelephoneNo
        </div>
        <div class="usr-object" style="width:@ViewBag.shortText; background-color:@ViewBag.txtBackgroundColor;">
            @Html.CommonTextBox("txtSiteTelephoneNo", (string)@ViewBag.txtSiteTelephoneNo, new { isViewMode = @ViewBag.isViewMode })
        </div>
        <div class="usr-label" style="width:125px;">
            @Resources.CMS220.lblUsage
        </div>
        <div class="usr-object" style="width:285px; background-color:@ViewBag.txtBackgroundColor;">
            @Html.CommonTextBox("txtSiteUsage", (string)@ViewBag.txtSiteUsage, new { isViewMode = @ViewBag.isViewMode })
        </div>
    </div>

     <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.lbWidth;">
          &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        </div>
        <div class="usr-object" style="width:@ViewBag.longText; background-color:@ViewBag.txtBackgroundColor;color:#ff7700">
            @Html.CommonCheckButton("ChkAttachImportanceFlag", @Resources.CMS220.lblAttachImportanceFlag, null, null, new { isViewMode = @ViewBag.isViewMode,disabled = true })
        </div>
    </div>

<div class="usr-clear-style">&nbsp;</div>
</div>