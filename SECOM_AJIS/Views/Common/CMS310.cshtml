@using SECOM_AJIS.Common.Helpers
@{
    Layout = "~/Views/Shared/_DialogLayout.cshtml";
    ViewBag.LabelWidth = "207px"; // 207px
}

@section page_header{

<script type="text/javascript" src="@Url.Content("~/Scripts/Base/AutoComplete.js")" ></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/Base/ComboBox.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/Custom/SearchAddressControl.js")" ></script>

<script type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/dhtmlxcommon.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/dhtmlxgrid.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/dhtmlxgridcell.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/ext/dhtmlxgrid_data.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/ext/dhtmlxgrid_pgn.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/excells/dhtmlxgrid_excell_dhxcalendar.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/dhtmlxcalendar.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/Base/GridControl.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/Common/CMS310.js")" ></script>

<script src="../../Scripts/Common/Dialog.js" type="text/javascript"></script>

<link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/js/dhtmlxgrid/dhtmlxgrid.css")"/>
<link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/js/dhtmlxgrid/skins/dhtmlxgrid_dhx_secom.css")"/>
<link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/js/dhtmlxgrid/ext/dhtmlxgrid_pgn_bricks.css")"/>



}


<div style="display:none">
    @Html.Hidden("btnCancel_CMS310", (string)@Resources.CMS310.btnCancel)
</div>


<!-- ==== HTML ====-->

<!-- ==== Search condition ====-->
<div id="divSearchAddrCtrl">
<div class="main-table">
    <div class="table-header">
        @Resources.CMS310.lblSearchCondition
    </div>
    <form id="searchCondition" style="border:0px">
        <div class="usr-row">
            <div class="usr-label" style="width:@ViewBag.LabelWidth; ">
                @Resources.CMS310.lblContractTargetPurchaserCode
            </div>
            <div class="usr-object">
                @Html.CommonTextBox("CustomerCode", null, new { style = "width:200px;" })
            </div>
        </div>
        <div class="usr-row">
            <div class="usr-label" style="width:@ViewBag.LabelWidth;">
                @Resources.CMS310.lblContractTargetPurchaserName_Eng_Local
            </div>
            <div class="usr-object" >
                @Html.CommonTextBox("CustomerName", null, new { style = "width:628px;" })
            </div>
        </div>
        <div class="usr-row">
            <div class="usr-label" style="width:@ViewBag.LabelWidth;">
                @Resources.CMS310.lblBranchName_Eng_Local
            </div>
            <div class="usr-object">
                @Html.CommonTextBox("BranchName", null, new { style = "width:628px;" })
            </div>
        </div>
       
        <div class="usr-row">
            <div class="usr-label" style="width:@ViewBag.LabelWidth; margin-top:50px" >
                @Resources.CMS310.lblContractTargetPurchaserAddress_Eng_Local
            </div>
            <div class="usr-object" style="height:100%;">
                @Html.Partial("_SearchAddressControl")
            </div>
        </div>
    </form>
    <div class="usr-row" style="height:5px; ">&nbsp;</div>
    <div class="usr-row">
        <div class="usr-object" style="float:right; margin-right:5px;">
            
                @Html.CommonButton("btnSearch",  @Resources.CMS310.btnSearch, new { style = "width:100px;" , type="button" })
                @Html.CommonButton("btnClear", @Resources.CMS310.btnClear, new { style = "width:100px;", type = "button" })
           
        </div>
    </div>
    <div class="usr-clear-style">&nbsp;</div>
</div> 
</div><!-- ==== End search condition ====-->

<div class="table-line"></div>

<!-- ==== Result list ====-->
<div id="divSearchResult">
    <div class="main-table">
      <div class="table-header">
            @Resources.CMS310.lblResultList
        </div>
         <div class="usr-row">
            <div id="mygrid_container" style="width: 99%; margin-left: 4px;">
            </div>
        </div>
        <div class="usr-clear-style">&nbsp;</div>
    </div>
</div><!-- ==== End result list ====-->
