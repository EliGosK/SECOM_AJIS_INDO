@using SECOM_AJIS.Common.Helpers
@using SECOM_AJIS.Presentation.Common.Helpers
@using SECOM_AJIS.Presentation.Master.Helpers
@{
   
    ViewBag.LabelWidth = "180px";
}

@section page_header{
<script src="../../Scripts/jquery.maskedinput-1.3.js" type="text/javascript"></script>
<script type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/dhtmlxcommon.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/dhtmlxgrid.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/dhtmlxgridcell.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/ext/dhtmlxgrid_data.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/ext/dhtmlxgrid_pgn.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/Base/GridControl.js")"></script>
<script src="../../Scripts/Base/ComboBox.js" type="text/javascript"></script>
<script src="../../Scripts/Common/CMS240.js" type="text/javascript"></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/Base/object/master_event.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/Base/object/ajax_method.js")"></script>

<link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/js/dhtmlxgrid/dhtmlxgrid.css")"/>
<link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/js/dhtmlxgrid/skins/dhtmlxgrid_dhx_secom.css")"/>
<link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/js/dhtmlxgrid/ext/dhtmlxgrid_pgn_bricks.css")"/>
<script type="text/javascript">
    var CMS240Data =
        {
            "EnablePurgeButton": "@ViewBag.EnablePurgeButton",
            "PageRow": "@ViewBag.PageRow",
            "PurgeProcessingStatusName": "@ViewBag.PurgeProcessingStatusName",
            "BatchStatusFailed" : "@ViewBag.BatchStatusFailed",
            "BatchStatusProcessing": "@ViewBag.BatchStatusProcessing"
        };
</script>     
}
<div id="Search_Criteria" class="main-table" >
     <div class="table-header">
        @Resources.CMS240.lblHeaderSearch
     </div>
     <form id="CMS240_Search" action='#'>
       <div class="usr-row">
            <div class="usr-label" style="width:@ViewBag.LabelWidth;">
                @Resources.CMS240.lblmonthandyear
            </div>            
            <div class="usr-object">
                @Html.LogMonthYear("MonthYear", new { style = "width:174px;" })
                @Html.RequireFiled()
            </div>
       </div>
       <div class="usr-row">
            <div class="usr-label" style="width:@ViewBag.LabelWidth;">
                @Resources.CMS240.lblPugeStat
            </div>            
            <div class="usr-object">
                @Html.CommonTextBox("Status", "", new { style = "width:170px;", @readonly = "readonly" })
            </div>
       </div>
   </form>
   <div class="usr-clear-style" style="height: 0%"> &nbsp;</div>
</div>
<!-- SEARCH RESULT SECTION ====================================================================================================================== -->
<div class="table-line"></div>
<div id="Search_Result" class="main-table">
    <div class="table-header">
        @Resources.CMS240.lblHeaderResult
    </div>
    <div>
        <div id="grid_result" style="width: 99%; margin-left: 4px;">
        </div>
    </div>
    <div class="table-line">
    </div>
</div>
