@using SECOM_AJIS.Common.Helpers
@{
    Layout = "~/Views/Shared/_DialogLayout.cshtml";
    ViewBag.LabelWidth = "190px";
}

@section page_header{


<script type="text/javascript" src="@Url.Content("~/Scripts/Common/CMS020.js")" ></script>

<script src="../../Scripts/Common/Dialog.js" type="text/javascript"></script>

}






<div class="main-table" style="width:160px">
    <div class="table-header">@Resources.CMS020.lblSearchMenu</div>

    <div class="usr-row">
        <div class="usr-label">
            @Resources.CMS020.lblSBContractCode
        </div>
    </div>
    
    <div class="usr-row">
        <div class="usr-object" >
            @Html.CommonTextBox("ContractCode_Searbar", null, new { style = "width:150px;", maxlength = "12" })
        </div>
    </div>

    <div class="usr-row">
        <div class="usr-label">
            @Resources.CMS020.lblSBUserCode
        </div>
    </div>
    
    <div class="usr-row">
        <div class="usr-object" >
            @Html.CommonTextBox("UserCode_Searbar", null, new { style = "width:150px;", maxlength = "5" })
        </div>
    </div>

    <div class="usr-row">
        <div class="usr-label">
            @Resources.CMS020.lblSBInvoiceNo
        </div>
    </div>
    
    <div class="usr-row">
        <div class="usr-object" >
            @Html.CommonTextBox("InvoiceNo_Searbar", null, new { style = "width:150px;", maxlength = "12" })
        </div>
    </div>

    <div class="usr-row">
        <div class="usr-label">
            @Resources.CMS020.lblSBProjectCode
        </div>
    </div>

    <div class="usr-clear-style">&nbsp;</div>
    
    <div class="usr-row">
        <div class="usr-object" >
            @Html.CommonTextBox("ProjectCode_Searbar", null, new { style = "width:150px;", maxlength = "8" })
        </div>
    </div>
    <div class="usr-clear-style">&nbsp;</div>

    <div class="usr-row" style="margin-top:10px;  ">
        <div class="usr-object" style="float:right; margin-right:10px;">@Html.CommonButton("btnRetrieve_Searchbar", Resources.CMS020.lblSBbtnRetrieve, new { style = "width:80px;" })</div>
    </div>

    <div class="usr-row" style="margin-top:30px; ">
        <div class="usr-object" style="float:right;  margin-right:10px;">@Html.CommonButton("btnSearch_Searchbar", Resources.CMS020.lblSBbtnSearch, new { style = "width:80px;" })</div>
    </div>
       
    <div class="usr-clear-style">&nbsp;</div>
</div>