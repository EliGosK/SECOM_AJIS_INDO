@using SECOM_AJIS.Common.Helpers
@using SECOM_AJIS.Presentation.Common.Helpers
@using SECOM_AJIS.Presentation.Master.Helpers
@{
   
    ViewBag.LabelWidth = "180px";
    ViewBag.isViewMode = true;
}
@section page_header{
    <script src="../../Scripts/jquery.maskedinput-1.3.js" type="text/javascript"></script>
    <script src="../../Scripts/Common/CMS100.js" type="text/javascript"></script>
    <script src="../../Scripts/Common/Dialog.js" type="text/javascript"></script>
}
<script type="text/javascript">
    var CMS100Data =
    {
        "PageRow": "@ViewBag.PageRow",
        "AlarmPrefix": "@ViewBag.AlarmPrefix",
        "MaintPrefix": "@ViewBag.MaintPrefix",
        "GuardPrefix": "@ViewBag.GuardPrefix",
        "SalePrefix": "@ViewBag.SalePrefix",

        "CustomerListHeader": "@ViewBag.CustomerListHeader",
        "SiteListHeader": "@ViewBag.SiteListHeader",
        "ContractListHeader": "@ViewBag.ContractListHeader",

        "ContractTargetDisplay": "@ViewBag.ContractTargetDisplay",
        "RealCustomerDisplay": "@ViewBag.RealCustomerDisplay",
        "AlarmDisplay": "@ViewBag.AlarmDisplay",
        "MaintenanceDisplay": "@ViewBag.MaintenanceDisplay",
        "GuardDisplay": "@ViewBag.GuardDisplay",
        "SaleDisplay": "@ViewBag.SaleDisplay"
