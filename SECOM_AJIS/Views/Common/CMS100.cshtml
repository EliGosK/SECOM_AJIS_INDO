<!-- CUSTOMER INFO SECTION ====================================================================================================================== -->
<div id="CustInfo_Section" class="main-table">
    <div class="table-header">
        @Resources.CMS100.lblHeaderCustomerGroup
    </div>
    <form id="CMS100_CustInfo" action='#'>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelWidth;">
            @Resources.CMS100.lblGroupCode
        </div>
        <div class="usr-object">
            @Html.CommonTextBox("GroupCode", (string)@ViewBag.GroupCode, new { isViewMode = @ViewBag.isViewMode })
        </div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelWidth;">
            @Resources.CMS100.lblGroupNameEn
        </div>
        <div class="usr-object">
            @Html.CommonTextBox("GroupNameEN", (string)@ViewBag.GroupNameEN, new { isViewMode = @ViewBag.isViewMode })
        </div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelWidth;">
            @Resources.CMS100.lblGroupNameLc
        </div>
        <div class="usr-object">
            @Html.CommonTextBox("GroupNameLC", (string)@ViewBag.GroupNameLC, new { isViewMode = @ViewBag.isViewMode })
        </div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelWidth;">
            @Resources.CMS100.lblMemo
        </div>
        <div class="usr-object" style="width:700px">
            @Html.CommonTextBox("Memo", (string)@ViewBag.Memo, new { isViewMode = @ViewBag.isViewMode  })
        </div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelWidth;">
            @Resources.CMS100.lblOffice
        </div>
        <div class="usr-object">
            @Html.CommonTextBox("OfficeInCharge", (string)@ViewBag.OfficeInCharge, new { isViewMode = @ViewBag.isViewMode })
        </div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelWidth;">
            @Resources.CMS100.lblperson
        </div>
        <div class="usr-object">
            @Html.CommonTextBox("PersonInCharge", (string)@ViewBag.PersonInCharge, new { isViewMode = @ViewBag.isViewMode })
        </div>
    </div>
    <div id="dlgCMS100" class="main-popup-dialog">
        <div class="popup-dialog"></div>
    </div>
    </form>
    <div class="usr-clear-style" style="height: 100%"></div>
</div>
