<div  class="sub-table">
<div class="table-sub-header">@Resources.CMS190.lblSection_Contract_detail_information</div>
    <div style="float: right; margin: -20px 5px 0 0; background-color:@ViewBag.BG2" >
        
           @if (ViewBag.ProductTypeCode == ProductType.C_PROD_TYPE_AL || ViewBag.ProductTypeCode == ProductType.C_PROD_TYPE_RENTAL_SALE)
           {
                <div class="fieldset-table" style="width: @ViewBag.AramWidth; height: 100%;">
                    <div class="fieldset-header">
                        <span>@Resources.CMS130.lblAlarm_provided_service_type</span>
                    </div>
                    <div style="margin-left:5px" class="label-view">@Html.CommonCheckButton("chkFire_monitoring", @Resources.CMS130.chkFire_monitoring, null, (bool)@ViewBag.chkFire_monitoring, new { disabled = "disabled" })</div>
                    <div style="margin-left:5px" class="label-view">@Html.CommonCheckButton("chkCrime_prevention", @Resources.CMS130.chkCrime_prevention, null, (bool)@ViewBag.chkCrime_prevention, new { disabled = "disabled" })</div>
                    <div style="margin-left:5px" class="label-view">@Html.CommonCheckButton("chkEmergency_report", @Resources.CMS130.chkEmergency_report, null, (bool)@ViewBag.chkEmergency_report, new { disabled = "disabled" })</div>
                    <div style="margin-left:5px" class="label-view">@Html.CommonCheckButton("chkFacility_monitoring", @Resources.CMS130.chkFacility_monitoring, null, (bool)@ViewBag.chkFacility_monitoring, new { disabled = "disabled" })</div>
            
                    <div class="usr-clear-style">&nbsp;</div>
                </div>

                <div style="height:7px">&nbsp;</div>

           }
            
        <div>
            @Html.Raw(Html.ContractsSameSiteLinkList("contractSameSiteList", @Resources.CMS130.lblContracts_of_the_same_site, (string)@ViewBag.SiteCodeList, false, new { width = @ViewBag.AramWidth, height = "120px;" }, (string)@ViewBag.ContractCode)) </div >

    </div>

