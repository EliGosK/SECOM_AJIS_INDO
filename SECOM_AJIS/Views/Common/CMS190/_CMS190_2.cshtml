                            @Html.CommonTextBox("txtContractEndDate", (string)@ViewBag.strContractEndDate, new { isViewMode = @ViewBag.isViewMode })
                        </div>
                    </div> 
            }
            else
            { 
                 <div class="usr-object" style="width:@ViewBag.shortTextPrdInfo; background-color:@ViewBag.txtBackgroundColor;">
                    @Html.CommonTextBox("txtContract_duration", "-", new { isViewMode = @ViewBag.isViewMode })
