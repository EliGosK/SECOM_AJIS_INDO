            <div class="usr-object" style="width:@ViewBag.shortTextPrdInfo; background-color:@ViewBag.txtBackgroundColor;">
                @Html.CommonTextBox("txtContract_duration", (string)@ViewBag.txtContract_duration, new { isViewMode = @ViewBag.isViewMode })
