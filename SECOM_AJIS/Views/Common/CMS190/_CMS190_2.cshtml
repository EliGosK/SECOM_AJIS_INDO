            <div class="usr-label" style="width:@ViewBag.lb2Width_ext;">
                @Resources.CMS190.lblContract_fee
            </div>
            <div class="usr-object" style="width:@ViewBag.shortTextPrdInfo; background-color:@ViewBag.txtBackgroundColor;">
                <div style="float:left;" >@Html.CommonTextBox("txtContract_fee", (string)@ViewBag.txtContract_fee, new { isViewMode = @ViewBag.isViewMode }) </div>
