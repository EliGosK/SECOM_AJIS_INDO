@using SECOM_AJIS.Common.Helpers
@using SECOM_AJIS.Presentation.Master.Helpers;
@using SECOM_AJIS.Presentation.Common.Helpers;
@{
    ViewBag.LabelWidth = "200px";
    ViewBag.RightLabelWidth = "300px";
    ViewBag.ObjectWidth = "200px";
    ViewBag.RightObjectWidth = "180px";
    ViewBag.isViewModeFlag = true;
}

@section page_header{
    <script src="../../Scripts/jquery.maskedinput-1.3.js" type="text/javascript"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/dhtmlxcommon.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/dhtmlxgrid.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/ext/dhtmlxgrid_data.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/ext/dhtmlxgrid_pgn.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/dhtmlxgridcell.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/Base/AutoComplete.js")" ></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/Base/ComboBox.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/Base/GridControl.js")"></script>
    <script src="../../Scripts/Base/DateTimePicker.js" type="text/javascript"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/Common/CMS090.js")" ></script>

}
<!-- SPECIFIED SEARCH CONDITION SECTION ========================================================================================================= -->
<div id="Search_Criteria" class="main-table">
    <div class="table-header">
       @Resources.CMS090.sectionSpecifySearch
    </div>
    <form id="Search_Form" action="#">
        <div class="usr-row">
            <div class="usr-label" style="width:@ViewBag.LabelWidth;">
                @Resources.CMS090.lblGroupCode
            </div>
            <div class="usr-object">
                @Html.CommonTextBox("GroupCode", "", new { style = "width:130px;", maxlength = "8" })
            </div>
        </div>
        <div class="usr-row">
            <div class="usr-label" style="width:@ViewBag.LabelWidth;">
                @Resources.CMS090.lblGroupName
            </div>
            <div class="usr-object">
                @Html.CommonTextBox("GroupName", "", new { style = "width:748px;", maxlength = "50" })
            </div>
        </div>
        <div class="usr-row">
            <div class="usr-label" style="width:@ViewBag.LabelWidth;">
                @Resources.CMS090.lblNumberOfCustomer
            </div>
            <div class="usr-object">
                @Html.NumericTextBox("NumberOfCustomerFrom", null, new { style = "width:130px;" })
                ~
                @Html.NumericTextBox("NumberOfCustomerTo", null, new { style = "width:130px;" })
            </div>
        </div>
        <div class="usr-row">
            <div class="usr-label" style="width:@ViewBag.LabelWidth;">
                @Resources.CMS090.lblNumberOfSite
            </div>
            <div class="usr-object">
                @Html.NumericTextBox("NumberOfSiteFrom", null, new { style = "width:130px;" })
                ~
                @Html.NumericTextBox("NumberOfSiteTo", null, new { style = "width:130px;" })
            </div>
        </div>
        <div class="usr-row">
            <div class="usr-label" style="width:@ViewBag.LabelWidth;">
                @Resources.CMS090.lblOfficeInCharge
            </div>
            <div class="usr-object" style="width:289px;">
                @*@Html.OfficeComboBox("OfficeInCharge", new { style = "width:184px;" })*@
                @Html.AllOfficeNormalCbo("OfficeInCharge", new { style = "width:289px;" },"ALL")
            </div>
            <div class="usr-label" style="width:140px;">
                @Resources.CMS090.lblPersonInCharge
            </div>
            <div class="usr-object">
                @Html.PersonInChargeCombo("PersonInCharge", null, new { style = "width:318px;" },"ALL")
            </div>
        </div>
        <div class="usr-row">
            <div style="text-align: right; margin-top:5px">
                @Html.CommonButton("btnSearch", @Resources.MAS070.btnSearch, new { type = "button" })
                @Html.CommonButton("btnClear", @Resources.MAS070.btnClear, new { type = "button" })
            </div>
        </div>
    </form>
    <div class="usr-clear-style" style="height:0%">&nbsp;</div>
</div>
<!-- RESULT LIST SECTION ======================================================================================================================== -->
<div id="Result_List" class="main-table">
    <div class="table-header">
       @Resources.CMS090.sectionResultList
    </div>
    <div>
        <div id="result_list_grid" style="width:99%;margin-left:4px;"></div>
    </div>
    <div class="usr-clear-style">&nbsp;</div>
</div>
