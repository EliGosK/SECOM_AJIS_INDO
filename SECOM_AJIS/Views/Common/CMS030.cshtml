@using SECOM_AJIS.DataEntity.Common;
@using SECOM_AJIS.Common.Helpers;
@using SECOM_AJIS.Presentation.Master.Helpers;
@using SECOM_AJIS.Presentation.Common.Helpers;
@using SECOM_AJIS.Common.Util.ConstantValue;
@section page_header{
    <script type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/dhtmlxcommon.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/dhtmlxgrid.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/dhtmlxgridcell.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/ext/dhtmlxgrid_data.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/ext/dhtmlxgrid_pgn.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/dhtmlxcalendar.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/excells/dhtmlxgrid_excell_dhxcalendar.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/Base/GridControl.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/Base/ComboBox.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/Base/DateTimePicker.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/Common/CMS030.js")"></script>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/js/dhtmlxgrid/dhtmlxgrid.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/js/dhtmlxgrid/skins/dhtmlxgrid_dhx_secom.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/js/dhtmlxgrid/ext/dhtmlxgrid_pgn_bricks.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/css/Common/cms030.css")" media="all" />
}
@{

    ViewBag.LabelWidth = "220px";
    ViewBag.Label2Width = "150px";
    ViewBag.ObjectWidth = "300px";


}

<div style="display:none">
    @Html.Hidden("CMS030_lbldocumnetNo", (string)@Resources.CMS030.lblDocumentNo)
</div>


<!-- ===== Search condition ===== -->
<div class="main-table" id="CMS060_SearchCondition">
    <div class="table-header">
        @Resources.CMS030.lblSearchCondition
    </div>
    <form id="formSearch" action="#" style="margin: 0px">
        <div class="usr-row">
            <div class="usr-label" id="lblDocumentType" style="width:@ViewBag.LabelWidth; ">
                @Resources.CMS030.lblDocumentType
            </div>
            <div class="usr-object" style="width:700px;">
                @Html.DocumentTypeCombo("DocumentType", new { style = "height: 22px; width: 660px;" }, "Select")
                @Html.RequireFiled()
            </div>

        </div>
        <div class="usr-row">
            <div class="usr-label" id="lblDocumentName" style="width:@ViewBag.LabelWidth; ">
                @Resources.CMS030.lblDocumentName
            </div>
            <div class="usr-object" style="width: 700px ;overflow:hidden;">

                @Html.DocumentNameComboBox("DocumentCode", null, new { style = "height: 22px; width: 660px;", maxlength = "20" }, null, "Select")
                @Html.RequireFiled()

            </div>
        </div>

        <div class="usr-clear-style">&nbsp;</div>

        <div class="usr-row" id="trHide1">
            <div class="usr-label" id="lblGenerateDate" style="width:@ViewBag.LabelWidth; ">
                @Resources.CMS030.lblGenerateDate
            </div>
            <div class="usr-object" id="GenDate">
                @Html.CommonTextBox("GenerateDateFrom", null, new { style = "width:100px;" })
                <label> ~ </label>
                @Html.CommonTextBox("GenerateDateTo", null, new { style = "width:100px;" })
                <label id="lblddmmyyyy"> (ddMMyyyy) </label>
            </div>
        </div>
        <div class="usr-row" id="trHide2">
            <div class="usr-label" id="lblMonthYear" style="width:@ViewBag.LabelWidth; ">
                @Resources.CMS030.lblMonthYear
            </div>
            <div class="usr-object">
                @Html.MonthComboBox("Month", new { style = "height: 22px; width: 100px;" }, true, "All")
                @Html.YearComboBox("Year", new { style = "height: 22px; width: 100px;" }, true, "All")
            </div>
        </div>
        <div class="usr-row" id="trHide3">
            <div class="usr-label" id="lblContractOffice" style="width:@ViewBag.LabelWidth; ">
                @Resources.CMS030.lblContractOffice
            </div>
            <div class="usr-object" style="width:@ViewBag.ObjectWidth;">
                @*@Html.ContractOfficeCombo("ContractOfficeCode", new { style = "height: 22px; width: 204px;" })*@
                @Html.ContractOfficeAuthorityCbo("ContractOfficeCode", new { style = "height: 22px; width: 204px;" }, true, "All")
            </div>
            <div class="usr-label" id="lblBillingOffice" style="width:@ViewBag.Label2Width; ">
                @Resources.CMS030.lblBillingOffice
            </div>
            <div class="usr-object">
                @*@Html.BillingOfficeCombo("BillingOfficeCode", new { style = "height: 22px; width: 204px;" })*@
                @Html.BillingOfficeAuthorityCbo("BillingOfficeCode", new { style = "height: 22px; width: 204px;" }, true, "All")
            </div>
        </div>
        <div class="usr-row" id="trHide4">
            <div class="usr-label" id="lblOperationOffice" style="width:@ViewBag.LabelWidth; ">
                @Resources.CMS030.lblOperationOffice
            </div>
            <div class="usr-object" style="width:250px;">
                @*@Html.OperationOfficeCombo("OperationOfficeCode", new { style = "height: 22px; width: 204px;" })*@
                @Html.OperationOfficeAuthorityCbo("OperationOfficeCode", new { style = "height: 22px; width: 204px;" }, true, "All")
            </div>
            <div class="usr-label" id="lblIssueOffice" style="width:200px; ">
                @Resources.CMS030.lblIssueOffice
            </div>
            <div class="usr-object">
                <select name="IssueOfficeCode" id="IssueOfficeCode" style="width: 204px;"></select>
            </div>
        </div>
        <div class="usr-row" id="trHide5">
            <div class="usr-label" id="lblDocumentNo" style="width:@ViewBag.LabelWidth; ">
                @Resources.CMS030.lblDocumentNo
            </div>
            <div class="usr-object">

                @Html.CommonTextBox("DocumentNo", null, new { style = "width:150px;" })

            </div>
        </div>
        <div class="usr-row" id="trHide6">
            <div class="usr-label" id="lblQuotationTagetCodeAlphabet" style="width:@ViewBag.LabelWidth; ">
                @Resources.CMS030.lblQuotationTagetCodeAlphabet
            </div>
            <div class="usr-object" style="width:@ViewBag.ObjectWidth;">
                @Html.CommonTextBox("QuotationTargetCode", null, new { style = "width:150px;", maxlength = CommonValue.C_MAXLENGTH_QUOTATION_TARGE_CODE })
                @Html.CommonTextBox("Alphabet", null, new { style = "width:41px;", maxlength = "4" })


            </div>
            <div class="usr-label" id="lblProjectCode" style="width:@ViewBag.Label2Width; ">
                @Resources.CMS030.lblProjectCode
            </div>
            <div class="usr-object">
                @Html.CommonTextBox("ProjectCode", null, new { style = "width:150px;", maxlength = "8" })
            </div>
        </div>
        <div class="usr-row" id="trHide7">
            <div class="usr-label" id="lblContractCodeOcc" style="width:@ViewBag.LabelWidth; ">
                @Resources.CMS030.lblContractCodeOcc
            </div>
            <div class="usr-object" style="width:@ViewBag.ObjectWidth;">
                @Html.CommonTextBox("ContractCode", null, new { style = "width:150px;", maxlength = CommonValue.C_MAXLENGTH_CONTRACT_CODE })
                @Html.CommonTextBox("OCC", null, new { style = "width:41px;", maxlength = "4" })
            </div>
            <div class="usr-label" style="width:@ViewBag.Label2Width; ">
                &nbsp;
            </div>
            <div class="remark" id="lblRemarkStar">
                @Resources.CMS030.lblRemarkStar
            </div>
        </div>
        <div class="usr-row" id="trHide8">
            <div class="usr-label" id="lblInstrumentCode" style="width:@ViewBag.LabelWidth; ">
                @Resources.CMS030.lblInstrumentCode
            </div>
            <div class="usr-object" style="width:@ViewBag.ObjectWidth;">
                @Html.CommonTextBox("InstrumentCode", null, new { style = "width:200px; ", maxlength = "50" })
            </div>
            <div class="usr-label" id="lblBillingTargetCode" style="width:@ViewBag.Label2Width; ">
                @Resources.CMS030.lblBillingTargetCode
            </div>
            <div class="usr-object">
                @Html.CommonTextBox("BillingTargetCode", null, new { style = "width:150px;", maxlength = CommonValue.C_MAXLENGTH_BILLING_TARGE_CODE })
            </div>
        </div>

        <div class="usr-row">
            <div class="usr-label" id="lblInstrumentLocationCode" style="width:@ViewBag.LabelWidth; ">
                @Resources.CMS030.lblInstrumentLocation
            </div>
            <div class="usr-object" style="width:@ViewBag.ObjectWidth;">
                @Html.InstrumentLocationComboBox("LocationCode", new { style = "height: 22px; width: 204px;" }, "All")
            </div>

        </div>

    </form>

    <!--====================== Button row ==========================-->
    <div class="usr-row" style="margin-top:50px">
        <div align="right">
            @Html.CommonButton("btnInvoicePrintingService", @Resources.CMS030.lblInvoicePrintingService, new { style = "width: 200px;", type = "button" })

            @Html.CommonButton("btnSearch", @Resources.CMS030.lblSearch, new { style = "width: 100px;", type = "button" })

            @Html.CommonButton("btnDownloadCTR095", @Resources.CMS030.lblDownload, new { style = "width: 100px;", type = "button" })

            @Html.CommonButton("btnClear", @Resources.CMS030.lblClear, new { style = "width: 100px;", type = "button" })
        </div>
    </div>

    <div class="usr-clear-style" style="height:0px;">&nbsp;</div>
</div>


<!-- ===== Search result ===== -->
<div id="divSearchResult" class="main-table">
    <div class="table-header">
        @Resources.CMS060.lblResultList
    </div>
    <div id="mygrid_container" style="width: 99%;">
    </div>
    <iframe id="ifDownload" style="visibility: hidden; width: 0px; height: 0px;"></iframe>
    <div class="usr-clear-style" style="height:0px;">&nbsp;</div>
</div>

