@using SECOM_AJIS.DataEntity.Common;
@using SECOM_AJIS.Common.Helpers;
@using SECOM_AJIS.Presentation.Master.Helpers;

@section page_header{
    <script src="../../Scripts/jquery.maskedinput-1.3.js" type="text/javascript"></script>
    <script src="../../Scripts/Base/DateTimePicker.js" type="text/javascript"></script>
    <script  type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/dhtmlxcommon.js")"></script>
    <script  type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/dhtmlxgrid.js")"></script>
    <script  type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/ext/dhtmlxgrid_data.js")"></script>
    <script  type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/ext/dhtmlxgrid_pgn.js")"></script>
    <script  type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/dhtmlxgridcell.js")"></script>
    <script  type="text/javascript" src="@Url.Content("~/Scripts/Base/GridControl.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/Common/CMS060.js")"></script>
    <script src="../../Scripts/Common/Dialog.js" type="text/javascript"></script>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/js/dhtmlxgrid/dhtmlxgrid.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/js/dhtmlxgrid/skins/dhtmlxgrid_dhx_secom.css")"/>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/js/dhtmlxgrid/ext/dhtmlxgrid_pgn_bricks.css")"/>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/css/Common/cms060.css")" media="all"  />
}
@{
    Layout = "~/Views/Shared/_DialogLayout.cshtml";
    ViewBag.LabelWidth = "230px";
}


<div style="display:none">
    @Html.Hidden("btnOk_cms060", (string)@Resources.CMS060.btnOk)
    @Html.Hidden("btnCancel_cms060", (string)@Resources.CMS060.btnCancel)
</div>

<!-- =====  HTML ===== -->

<!-- ===== Search condition ===== -->
<div class="main-table" id="divSearchCondition">
    <div class="table-header">
        @Resources.CMS060.lblSearchCondition
    </div>


    <form id="formSearch" action="#" style="margin: 0;">

    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelWidth; ">
            @Resources.CMS060.lblEmployeename
        </div>
        <div class="usr-object">
            @Html.CommonTextBox("EmployeeName", null, new { style = "width:300px;", maxlength = "100" })
        </div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelWidth;">
            @Resources.CMS060.lblEmailAddress
        </div>
        <div class="usr-object">
            @Html.CommonTextBox("EmailEddress", null, new { style = "width:300px;", maxlength = "100" })
        </div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelWidth;">
            @Resources.CMS060.lblOffice
        </div>
        <div class="usr-object">
            @Html.OfficeComboBox("Office", new { style = " width: 304px;" }, "ALL")
        </div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelWidth;">
            @Resources.CMS060.lblDepartment
        </div>
        <div class="usr-object">
            @Html.DepartmetComboBox("Department", new { style = "width: 304px;" },"ALL")
        </div>
    </div>

    </form>


    <div class="usr-row">
        <div style="text-align: right;">
            @Html.CommonButton("btnSearch_cms060", @Resources.CMS060.lblSearch, new { type = "button" })
           
            @Html.CommonButton("btnClear_cms060", @Resources.CMS060.lblClear, new { type = "button" })
        </div>
    </div>
    
    <div class="usr-clear-style" style="height:0%">&nbsp;</div>
</div>
<!-- ===== Search result ===== -->
<div id="divSearchResult" class="main-table">
    <div class="table-header">
        @Resources.CMS060.lblResultList
    </div>
    <div class="usr-row">
        <div id="mygrid_container" style="width:99%;margin-left: 4px;"></div>
    </div>
    <div class="usr-clear-style">&nbsp;</div>
</div>




<!-- ===== To ===== -->
<div class="main-table">
    <div class="table-header">
        @Resources.CMS060.lblTo
    </div>
    <div class="sub-table" >
         <div class="usr-row">
            <div id ="SelectedEmailList" >
                <dl id="selectedemail"   >
                </dl>
            </div>
        </div>
         <div class="usr-clear-style">&nbsp;</div>
    </div>

      <div class="usr-clear-style">&nbsp;</div>
</div>
