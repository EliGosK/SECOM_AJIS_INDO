</script>


}



<div style="display:none">

</div>

<!-- Specify location -->
<div class="main-table" id="divSearchCondition">
    <div class="table-header">
        @Resources.BLS080.lblSpecifySearchCondition
    </div>

    <form id="formSearchCondition" action="#">

    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelCol1Width; ">
            @Resources.BLS080.lblBankBranchName
        </div>
        <div class="usr-object">
            @*@Html.BankNameBranchNameComboBox("BankCodeBranchCode",  new { style = "width:500px" }) *@
            @Html.SECOMAccountAutoTransferComboBox("SecomAccountID", new { style = "width:500px" }, true, "ALL")
        </div>
    </div>
    
    <div class="usr-row">
       <div class="usr-label" id="lblAutoTranferDateFrom" style="width:@ViewBag.LabelCol1Width; ">
            @Resources.BLS080.lblAutoTranferDate
        </div>
        <div class="usr-object" id="AutoTranferDate">
            @Html.CommonTextBox("AutoTranferDateFrom", null, new { style = "width:120px;" })
            <label> ~ </label>
            @Html.CommonTextBox("AutoTranferDateTo", null, new { style = "width:120px;" })
        </div>
        <div class="usr-object">
           @Html.LabelDateFormat("")
        </div>
    </div>

    <div class="usr-row">
        <div class="usr-label" id="lblGenerateDate" style="width:@ViewBag.LabelCol1Width; ">
            @Resources.BLS080.lblGenerateDate
        </div>
        <div class="usr-object" id="GeneateDate">
            @Html.CommonTextBox("GeneateDateFrom", null, new { style = "width:120px;" })
            <label> ~ </label>
            @Html.CommonTextBox("GeneateDateTo", null, new { style = "width:120px;" })
        </div>
        <div class="usr-object">
           @Html.LabelDateFormat("")
        </div>
    </div>

    </form>

    <div class="usr-row">
        <div class="usr-object" style="margin-top:5px;margin-right:4px; float:right;">
            <div>
                @Html.CommonButton("btnSearch", @Resources.BLS080.btnSearch, new { style = "width:100px;", type = "button" })
                @Html.CommonButton("btnClear", @Resources.BLS080.btnClear, new { style = "width:100px;", type = "button" })
            </div>
        </div>
    </div>

    <div class="usr-clear-style" style="height:0px">&nbsp;</div>
</div>


<!-- Result list -->
<div class="main-table" id="divSearchResult">
    <div class="table-header">
        @Resources.BLS080.lblResultList
    </div>

    <div class="usr-row">
        <div id="BLS080_ResultListGrid" style="width: 99%; margin-left: 4px;"></div>
        <iframe id="fDownload" style="visibility: hidden; width: 0px; height: 0px;"></iframe>
    </div>

    <div class="usr-clear-style" style="height:0px">&nbsp;</div>
</div>

