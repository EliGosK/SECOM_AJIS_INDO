        <div class="usr-object" style="width:@ViewBag.ObjectTextbox3; background-color:@ViewBag.txtBackgroundColor;">
            @Html.CommonTextBox("BranchNameEN", null, new { style = "width:" + @ViewBag.Textbox3 + ";", @readonly = true })
        </div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.lbWidth;">
            @Resources.BLS020.lblAddressEnglish
        </div>
        <div class="usr-object" style="width:@ViewBag.ObjectTextbox3; background-color:@ViewBag.txtBackgroundColor;">
            @Html.CommonTextBox("AddressEN", null, new { style = "width:" + @ViewBag.Textbox3 + ";", @readonly = true })
        </div>
    </div>
    <div class="usr-row"></div>
<div class="usr-row"></div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.lbWidth;">
            @Resources.BLS020.lblNameLocal
        </div>
        <div class="usr-object" style="width:@ViewBag.ObjectTextbox3; background-color:@ViewBag.txtBackgroundColor;">
            @Html.CommonTextBox("FullNameLC", null, new { style = "width:" + @ViewBag.Textbox3 + ";", @readonly = true })
