        <div class="usr-object" style="width:325px">
            @Html.CommonTextBox("BusinessTypeName", null, new { style = "width:325px", @readonly = true })
        </div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.lbWidth;">
            @Resources.BLS020.lblBillingOffice
        </div>
        <div class="usr-object" style="width: 180px;">
            @Html.BillingOfficeWithSpecialConditionCbo("BillingOfficeCode", new { style = "width:154px;" }, true)
