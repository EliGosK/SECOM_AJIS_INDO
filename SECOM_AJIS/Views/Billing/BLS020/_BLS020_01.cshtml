        </div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.lbWidth;">
            @Resources.BLS020.lblMemo
        </div>
        <div class="usr-object" style="width: 650px">
            @Html.CommonTextArea("Memo", null, new { style = "width:650px; height:60px;", maxlength = "4000" })
