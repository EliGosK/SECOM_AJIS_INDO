@using SECOM_AJIS.DataEntity.Billing;
@using SECOM_AJIS.Common.Helpers;
@using SECOM_AJIS.Presentation.Billing.Helpers;
@using SECOM_AJIS.Common.Util.ConstantValue;
@using SECOM_AJIS.Presentation.Common.Helpers;
@{     
    Layout = "~/Views/Shared/_DialogLayout.cshtml";
    ViewBag.lbWidth = "220px";  /* ViewBag.LabelWidth */
    ViewBag.lbWidth2 = "280px";     
    ViewBag.ObjectCol1Width = "154px";
    ViewBag.ObjectCol2Width = "550px";
    ViewBag.ObjectCol3Width = "70px";
    ViewBag.ObjectColComboWidth = "240px";
    ViewBag.ObjectCol4Width = "220px";
    ViewBag.ObjectCol5Width = "198px";
  }
  @section page_header{    
    <script src="../../Scripts/Base/ComboBox.js" type="text/javascript"></script> 
     <script type="text/javascript" src="@Url.Content("~/Scripts/Billing/BLS031.js")"></script>   
    <script type="text/javascript">
        var objBLS031 = {
            ContractCode: "@ViewBag.ContractCode",
            BillingClientCode: "@ViewBag.BillingClientCode",
            BillingClientNameEN: "@ViewBag.BillingClientNameEN",
            BillingClientNameLC: "@ViewBag.BillingClientNameLC",
             AccountName: "@ViewBag.AccountName",
             BankCode: "@ViewBag.BankCode",
             BankBranchCode: "@ViewBag.BankBranchCode",
             AccountType: "@ViewBag.AccountType",
             LastestResult: "@ViewBag.LastestResult",
             Account1: "@ViewBag.Account1",
             Account2: "@ViewBag.Account2",
             Account3: "@ViewBag.Account3",
             Account4: "@ViewBag.Account4",
             AutoTransferDate: "@ViewBag.AutoTransferDate"
        };
    </script>
    
}
<div style="display:none;"> 
    @Html.Hidden("btnOK", (string)@Resources._ButtonControl.btnCommandOK)
    @Html.Hidden("btnCancel", (string)@Resources._ButtonControl.btnCommandCancel)
</div>
<form id = "AutoTransfer" action="">
<div id="divRegisterAutoTransferInfo" class="main-table" style="margin-top:5px;">  
      
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.lbWidth;">
            @Resources.BLS031.lblBillingCode
        </div>
        <div class="usr-object" style="width:@ViewBag.ObjectCol1Width;">
            @Html.CommonTextBox("BLS031_ContractCode", null, new { style = "width:" + @ViewBag.ObjectCol1Width + ";", @readonly = true })
        </div>        
    </div>
     <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.lbWidth;">
            @Resources.BLS031.lblBillingClientCode
        </div>
        <div class="usr-object" style="width:@ViewBag.ObjectCol1Width;">
            @Html.CommonTextBox("BLS031_BillingClientCode", null, new { style = "width:" + @ViewBag.ObjectCol1Width + ";", @readonly = true })
        </div>        
    </div>
      <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.lbWidth;">
            @Resources.BLS031.lblBillingClientNameEnglish
        </div>
        <div class="usr-object" style="width:@ViewBag.ObjectCol2Width;">
            @Html.CommonTextBox("BLS031_BillingClientNameEN", null, new { style = "width:" + @ViewBag.ObjectCol2Width + ";", @readonly = true })
        </div>        
    </div>
     <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.lbWidth;">
            @Resources.BLS031.lblBillingClientNameLocal
        </div>
        <div class="usr-object" style="width:@ViewBag.ObjectCol2Width;">
            @Html.CommonTextBox("BLS031_BillingClientNameLC", null, new { style = "width:" + @ViewBag.ObjectCol2Width + ";", @readonly = true })
        </div>        
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.lbWidth;">
            @Resources.BLS031.lblAutoTransferAccountName
        </div>
        <div class="usr-object" style="width:@ViewBag.ObjectCol2Width + 50;">
            @Html.CommonTextBox("BLS031_AccountName", null, new { style = "width:" + @ViewBag.ObjectCol2Width + ";", maxlength = "50" })    
             @Html.RequireFiled()      
        </div>                 
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.lbWidth;">
            @Resources.BLS031.lblBank
        </div>
        <div class="usr-object" style="width:@ViewBag.ObjectColComboWidth;">            
              @Html.BankCodeComboBox("BLS031_BankCode", new { style = "width:" + @ViewBag.ObjectCol4Width + ";" }, false,true)            
             @Html.RequireFiled()               
        </div>  
        <div class="usr-label" style="width:208px;">
            @Resources.BLS031.lblBranch
        </div>
        <div class="usr-object" style="width:@ViewBag.ObjectColComboWidth;">
            @Html.BankBranchComboBox("BLS031_BankBranchCode", null, new { style = "width:" + @ViewBag.ObjectCol5Width + ";" }, true)
            @*@Html.BlankComboBox("BLS031_BankBranchCode", new { style = "width:" + @ViewBag.ObjectCol5Width })*@
            @Html.RequireFiled()                
        </div>               
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.lbWidth;">
            @Resources.BLS031.lblAccountType
        </div>
        <div class="usr-object" style="width:@ViewBag.ObjectColComboWidth;">            
            @Html.AccountTypeCodeComboBox("BLS031_AccountType", new { style = "width:" + @ViewBag.ObjectCol4Width + ";" })               
             @Html.RequireFiled()            
        </div>  
        <div class="usr-label" style="width:208px;">
            @Resources.BLS031.lblAccountNo
        </div>
        <div class="usr-object" style="width:@ViewBag.ObjectCol1Width + 240;">
            @Html.CommonTextBox("BLS031_Account1", null, new { style = "width:194px;text-align:left", maxlength = "20" }) 
            @*-           
            @Html.CommonTextBox("BLS031_Account2", null, new { style = "width:20px;text-align:left", maxlength = "1" }) -            
            @Html.CommonTextBox("BLS031_Account3", null, new { style = "width:50px;text-align:left", maxlength = "5" }) -            
            @Html.CommonTextBox("BLS031_Account4", null, new { style = "width:20px;text-align:left", maxlength = "1" })*@
            @Html.RequireFiled()                
        </div>               
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.lbWidth;">
            @Resources.BLS031.lblAutoTransferDate
        </div>
        <div class="usr-object" style="width:198px">
            @Html.AutoTransferDateCodeComboBox("BLS031_AutoTransferDate", new { style = "width:80px" }, false, "CUSTOM_SELECT")   
             @Html.RequireFiled()               
        </div>  
        <div class="usr-label" style="width:250px;">
            @Resources.BLS031.lblLatestAutoTransferResult
        </div>
        <div class="usr-object" style="width:208px">
            @Html.CommonTextBox("BLS031_LatestAutoTransferResult", null, new { style = "width:194px", @readonly = true })
        </div>               
    </div>
    <div class="usr-clear-style">&nbsp;</div> 
</div>
</form>