@section page_header{
    <link rel="stylesheet" href="../../Content/css/fullcalendar.css" type="text/css">
    <link rel="stylesheet" href="../../Content/css/ExchangeRate/Master.css" type="text/css">
    <link rel="stylesheet" href="../../Content/css/fullcalendar_customize.css" type="text/css">
    <script src="../../Scripts/fullcalendar.js" type="text/javascript"></script>
    <script src="../../Scripts/ExchangeRate/Dialog.js" type="text/javascript"></script>
