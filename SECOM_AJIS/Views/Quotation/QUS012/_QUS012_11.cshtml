@using SECOM_AJIS.Common.Helpers
@using SECOM_AJIS.Presentation.Common.Helpers;
@{
    Layout = "";

    ViewBag.LabelCol1Width = "190px";
    ViewBag.ObjectCol1Width = "225px";
    ViewBag.LabelCol2Width = "190px";
    ViewBag.ObjectCol2Width = "225px";
    ViewBag.ObjectColMergeWidth = "630px";
    ViewBag.isViewMode = true;
}
<script type="text/javascript" src="@Url.Content("~/Scripts/Quotation/QUS012/QUS012_11.js")"></script>
<div id="divSentryGuardDetail" class="main-table">
    <div class="table-header">
        @Resources.QUS012.lblSentryGuardDetail
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelCol1Width;">
            @Resources.QUS012.lblSecurityItemFee
        </div>
        <div class="usr-object" style="width:@ViewBag.ObjectColMergeWidth;">
            <div style="float:left;">
                @Html.NumericTextBoxWithMultipleCurrency("SecurityItemFee", (string)@ViewBag.SecurityItemFee, (string)@ViewBag.SecurityItemFeeCurrencyType, new { isViewMode = @ViewBag.isViewMode })
            </div>
        </div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelCol1Width;">
            @Resources.QUS012.lblOtherItemFee
        </div>
        <div class="usr-object" style="width:@ViewBag.ObjectColMergeWidth;">
            <div style="float:left;">
                @Html.NumericTextBoxWithMultipleCurrency("OtherItemFee", (string)@ViewBag.OtherItemFee, (string)@ViewBag.OtherItemFeeCurrencyType, new { isViewMode = @ViewBag.isViewMode })
            </div>
        </div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelCol1Width;">
            @Resources.QUS012.lblSentryGuardAreaType
        </div>
        <div class="usr-object" style="width:@ViewBag.ObjectColMergeWidth;">
            @Html.CommonTextBox("SentryGuardAreaType", (string)@ViewBag.SentryGuardAreaType, new { isViewMode = @ViewBag.isViewMode })
        </div>
    </div>
    <div class="usr-row">
        <div id="gridSentryGuardDetail" style="width:835px;margin-left:4px;"></div>
    </div>
    <div class="usr-clear-style">&nbsp;</div>
</div>