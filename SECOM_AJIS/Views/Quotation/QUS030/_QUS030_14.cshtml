@using SECOM_AJIS.Common.Helpers;
@using SECOM_AJIS.Presentation.Common.Helpers;
@using SECOM_AJIS.Presentation.Master.Helpers;
@{
    Layout = "";
    ViewBag.LabelCol1Width = "220px";
    ViewBag.ObjectCol1Width = "140px";
}
<script type="text/javascript">
    C_CURRENCY_LOCAL =  '@SECOM_AJIS.Common.Util.ConstantValue.CurrencyUtil.C_CURRENCY_LOCAL'
</script>
<script type="text/javascript" src="@Url.Content("~/Scripts/Quotation/QUS030/QUS030_14.js")"></script>
<div style="display:none;">
    @Html.Hidden("DisabledContractFee", (bool)ViewBag.DisabledContractFee)
    @Html.Hidden("DisabledInstallationFee", (bool)ViewBag.DisabledInstallationFee)
    @Html.Hidden("DisabledDepositFee", (bool)ViewBag.DisabledDepositFee)
    @Html.Hidden("DisabledContractFeeCurrencyType", (bool)ViewBag.DisabledContractFeeCurrencyType)
    @Html.Hidden("DisabledInstallationFeeCurrencyType", (bool)ViewBag.DisabledInstallationFeeCurrencyType)
    @Html.Hidden("DisabledDepositFeeCurrencyType", (bool)ViewBag.DisabledDepositFeeCurrencyType)
</div>
<form id="formFeeInfo_AL">
    <div id="divFeeInfo_AL" class="main-table">
        <div class="table-header">
            @Resources.QUS030.lblFeeInformation_AL
        </div>
        <div class="usr-row">
            <div class="usr-label" style="width:@ViewBag.LabelCol1Width;">
                @Resources.QUS030.lblContractFee
            </div>
            <div class="usr-object" style="margin-right:5px;">
                @Html.NumericTextBoxWithMultipleCurrency("ContractFee", (string)@ViewBag.ContractFee, (string)@ViewBag.ContractFeeCurrencyType, new { style = "width:" + @ViewBag.ObjectCol1Width + ";" })
            </div>
        </div>
        <div class="usr-row">
            <div class="usr-label" style="width:@ViewBag.LabelCol1Width;">
                @Resources.QUS030.lblInstallationFee
            </div>
            <div class="usr-object" style="margin-right:5px;">
                @Html.NumericTextBoxWithMultipleCurrency("InstallationFee", (string)@ViewBag.InstallationFee, (string)@ViewBag.InstallationFeeCurrencyType, new { style = "width:" + @ViewBag.ObjectCol1Width + ";" })
            </div>
        </div>
        <div class="usr-row">
            <div class="usr-label" style="width:@ViewBag.LabelCol1Width;">
                @Resources.QUS030.lblDepositFee
            </div>
            <div class="usr-object" style="margin-right:5px;">
                @Html.NumericTextBoxWithMultipleCurrency("DepositFee", (string)@ViewBag.DepositFee, (string)@ViewBag.DepositFeeCurrencyType, new { style = "width:" + @ViewBag.ObjectCol1Width + ";" })
            </div>
        </div>
        <div class="usr-clear-style">&nbsp;</div>
    </div>
</form>