@using SECOM_AJIS.Common.Helpers;
@using SECOM_AJIS.Presentation.Contract.Helpers;
@using SECOM_AJIS.Presentation.Common.Helpers;

@{
    ViewBag.LabelCol1Width = "180px";
    ViewBag.LabelCol2Width = "180px";
    ViewBag.ObjectCol1Width = "240px";
    ViewBag.ObjectCol2Width = "180px";
    ViewBag.ObjectColMergeWidth = "700px";
}

@section page_header{
    <script type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/dhtmlxcommon.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/dhtmlxgrid.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/ext/dhtmlxgrid_data.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/ext/dhtmlxgrid_pgn.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/dhtmlxgridcell.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/excells/dhtmlxgrid_excell_dhxcalendar.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/dhtmlxgrid/dhtmlxcalendar.js")"></script>

    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/js/dhtmlxgrid/dhtmlxgrid.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/js/dhtmlxgrid/dhtmlxgrid_skins.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/js/dhtmlxgrid/ext/dhtmlxgrid_pgn_bricks.css")"/>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/js/dhtmlxgrid/skins/dhtmlxgrid_dhx_skyblue.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/js/dhtmlxgrid/skins/dhtmlxgrid_dhx_secom.css")"/>

    <script type="text/javascript" src="@Url.Content("~/Scripts/Base/DateTimePicker.js")" ></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/Base/GridControl.js")"></script>

    <script type="text/javascript" src="@Url.Content("~/Scripts/Inventory/IVS200.js")" ></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/Base/AutoComplete.js")" ></script>
}

<div id="divSearchCriteria" class="main-table" style="margin-top:5px;">
    <form id="formSearchCondition" name="formSearchCondition" onSubmit="return false;">
    <div class="table-header">@Resources.IVS200.lblSearchCriteria</div>

    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelCol1Width;">@Resources.IVS200.lblOffice</div>
        <div class="usr-object" style="margin-left:0px;">
           @Html.CommonTextBox("Office", null, new { style = "width: " + @ViewBag.ObjectCol1Width + ";", @readonly = true })
        </div> 
        <div class="usr-label" style="width:@ViewBag.LabelCol2Width;">@Resources.IVS200.lblLocation</div>
        <div class="usr-object" style="margin-left:0px;">
           @Html.CommonTextBox("Location", null, new { style = "width: " + @ViewBag.ObjectCol2Width + ";", @readonly = true })
        </div> 
    </div>

    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelCol1Width;">@Resources.IVS200.lblInstrumentArea</div>
        <div class="usr-object" style="margin-left:0px;">
           @Html.CommonTextBox("InstrumentArea", @Resources.IVS200.lblNewInstrumentArea, new { style = "width: " + @ViewBag.ObjectCol1Width + ";", @readonly = true })
        </div> 
    </div>

    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelCol1Width;">@Resources.IVS200.lblInstrumentCode</div>
        <div class="usr-object" style="margin-left:0px;">
           @Html.CommonTextBox("InstrumentCode", null, new { style = "width: " + @ViewBag.ObjectCol1Width + ";", maxlength = 50 })
        </div> 
        <div class="usr-label" style="width:@ViewBag.LabelCol2Width;">@Resources.IVS200.lblInstrumentName</div>
        <div class="usr-object" style="margin-left:0px;">
           @Html.CommonTextBox("InstrumentName", null, new { style = "width: " + @ViewBag.ObjectCol2Width + ";", maxlength = 200 })
        </div> 
    </div>

    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.LabelCol1Width;">@Resources.IVS200.lblExpectedQtyIs</div>
        <div class="usr-object" style="margin-left:0px; width:@ViewBag.ObjectCol1Width;">
           @Html.CommonCheckButton("HaveOrder", @Resources.IVS200.lblHaveExpectedQty, "1", false, null)
        </div> 
        <div class="usr-label" style="width:@ViewBag.LabelCol2Width;">@Resources.IVS200.lblEffectiveStockQtyIs</div>
        <div class="usr-object" style="margin-left:0px;">
           @Html.CommonCheckButton("BelowSafety", @Resources.IVS200.lblBelowSafetyStockQty, "1", false, null)
        </div> 
        <div class="usr-object" style="margin-left:5px;">
           @Html.CommonCheckButton("Minus", @Resources.IVS200.lblMinus, "1", false, null)
        </div> 
    </div>

    <div class="usr-row">
        <div style="text-align: right; float: right; width:@ViewBag.ObjectColMergeWidth; margin-right: 4px;">
            @Html.CommonButton("btnSearch", (string)@Resources.IVS200.btnSearch, new { style = "width:80px;" })
            @Html.CommonButton("btnClear", (string)@Resources.IVS200.btnClear, new { style = "width:80px;" })
        </div>
    </div>
    <div class="usr-clear-style">&nbsp;</div>
    </form>
</div>

<div id="divInstrumentQuantityList" class="main-table" style="margin-top:5px;">
    <div class="table-header">@Resources.IVS200.lblInstrumentQuantityList</div>

    <div class="usr-row">
        <div style="text-align: right; float: left; width: 100%">
            <div id="gridInstrumentQuantityList">
            </div>
        </div>
    </div>

    <div class="usr-clear-style">&nbsp;</div>
</div>



<div id="dlgBox" class="main-popup-dialog">
    <div class="popup-dialog"></div>
</div>

