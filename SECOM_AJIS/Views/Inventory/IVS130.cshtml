@{
    ViewBag.Col1 = "210px";
    ViewBag.Col2 = "260px";
    ViewBag.NormalTxt = "200px";
    ViewBag.NormalCbo = "204px";
    ViewBag.ProjPurSortObj = "120px";
    ViewBag.LongTxt = "720px";
    ViewBag.Midtxt = "220px";
    ViewBag.SysProdTxt = "300px";
}
<!-- ===================================== Repair slip no  =========================================== -->
<div class="main-table" id="RepairSlipNo">
    <div class="table-header">
        @Resources.IVS130.lblSearchRepairReturnSlip</div>
    <div class="usr-row">
        <div class="usr-label" style="width: 415px;">@Resources.IVS130.lblRepairReturnSlip
        </div>
        <div class="usr-object">
            @Html.CommonTextBox("SlipNo", null, new { maxlength = "16" })
            @Html.CommonButton("btnRetrieve", @Resources.IVS130.lblBtnRetrieve)
        </div>
    </div>
    <div class="usr-clear-style">
        &nbsp;</div>
</div>
<!-- ===================================== End Repair slip no =========================================== -->
<!-- ===================================== Repair Request Instrument detail  =========================================== -->
<div class="main-table" id="RepairRequestInstrument">
    <div class="table-header">
        @Resources.IVS130.lblRepairReturn</div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.Col1">@Resources.IVS130.lblSourceLocation
        </div>
        <div class="usr-object">
            @Html.CommonTextBox("SourceLocation", null, new { style = "width:" + ViewBag.NormalTxt, @readonly = "readonly" })
            @Html.Hidden("SourceLocationCode")
        </div>
        <div class="usr-label" style="width:@ViewBag.Col1">@Resources.IVS130.lblDestinationLocation
        </div>
        <div class="usr-object">
            @Html.CommonTextBox("DestinationLocation", null, new { style = "width:" + ViewBag.NormalTxt, @readonly = "readonly" })
            @Html.Hidden("DestinationLocationCode")
        </div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="width:@ViewBag.Col1">@Resources.IVS130.lblMemo
        </div>
        <div class="usr-object">
            @Html.CommonTextArea("Detmemo", null, new { style = "width:619px; height:80px;", @readonly = true })
        </div>
    </div>
    <div class="usr-row">
        <div id="InstrumentGrid" style="width: 99%; margin-left: 7px;">
        </div>
    </div>
    <div class="usr-row">
        <div class="usr-label" style="margin-left: 2px;">@Resources.IVS130.lblText
        </div>
    </div>
    <div class="usr-clear-style">
        &nbsp;</div>
</div>
<!-- ===================================== End Repair Request Instrument detail =========================================== -->
<div id="dlgBox" class="main-popup-dialog">
    <div class="popup-dialog">
    </div>
</div>
